<COMPONENT>
  <HEADER
    PLATEFORM="ALL"
    SERIAL=""
    VERSION="0.102"
    STATUS="ALPHA"
    ICON32="tAggregateRow.png"
    COMPATIBILITY="ALL"
    AUTHOR="Talend"
    RELEASE_DATE="20050320A"
    STARTABLE="false"
    SCHEMA_AUTO_PROPAGATE="false"
  >
    <SIGNATURE/>
  </HEADER>

  <DOCUMENTATION>
    <URL/>
  </DOCUMENTATION>

  <CONNECTORS>
    <CONNECTOR CTYPE="FLOW" MAX_INPUT="1" MAX_OUTPUT="1"/>
    <CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="1" MAX_INPUT="1"/>
    <CONNECTOR CTYPE="BEFORE" MAX_INPUT="1"/>
    <CONNECTOR CTYPE="AFTER" MAX_INPUT="1"/>
    <CONNECTOR CTYPE="REFERENCE"/>
    <CONNECTOR CTYPE="RUN_OK"/>
    <CONNECTOR CTYPE="RUN_ERROR"/>
    <CONNECTOR CTYPE="RUN_IF"/>
  </CONNECTORS>

  <PARAMETERS>
    <PARAMETER
      NAME="SCHEMA"
      FIELD="SCHEMA_TYPE"
      REQUIRED="true"
      NUM_ROW="1"
    >
      <DEFAULT/> 
    </PARAMETER>

    <PARAMETER
      NAME="GROUPBYS"
      FIELD="TABLE"
      REQUIRED="true"
      NUM_ROW="2"
      NB_LINES="2"
    >
      <ITEMS>
        <ITEM NAME="OUTPUT_COLUMN" FIELD="COLUMN_LIST" />
        <ITEM NAME="INPUT_COLUMN" FIELD="COLUMN_LIST" />
      </ITEMS>
    </PARAMETER>

    <PARAMETER
      NAME="OPERATIONS"
      FIELD="TABLE"
      REQUIRED="false"
      NUM_ROW="3"
      NB_LINES="5"
    >
      <ITEMS>
        <ITEM NAME="OUTPUT_COLUMN" FIELD="COLUMN_LIST" />
        <ITEM NAME="FUNCTION" FIELD="CLOSED_LIST">
          <ITEMS DEFAULT="COUNT">
            <ITEM NAME="COUNT"  VALUE="count"/>
            <ITEM NAME="MIN"    VALUE="min"/>
            <ITEM NAME="MAX"    VALUE="max"/>
            <ITEM NAME="AVG"    VALUE="avg"/>
            <ITEM NAME="SUM"    VALUE="sum"/>
          </ITEMS>
        </ITEM>
        <ITEM NAME="INPUT_COLUMN" FIELD="PREV_COLUMN_LIST" />
      </ITEMS>
    </PARAMETER>

  </PARAMETERS>

  <CODEGENERATION>
    <TEMPLATES INPUT="AGGOUT" OUTPUT="AI">

      <TEMPLATE NAME="AGGOUT" COMPONENT="tAggregateOut">
        <LINK_TO NAME="AI" CTYPE="BEFORE"/>
      </TEMPLATE>
      
      <TEMPLATE NAME="AI" COMPONENT="tArrayIn"/>
      
      <TEMPLATE_PARAM SOURCE="self.OPERATIONS" TARGET="AGGOUT.OPERATIONS"/>
      <TEMPLATE_PARAM SOURCE="self.GROUPBYS" TARGET="AGGOUT.GROUPBYS"/>
      <TEMPLATE_PARAM SOURCE="self.SCHEMA" TARGET="AGGOUT.SCHEMA"/>
      <TEMPLATE_PARAM SOURCE="self.SCHEMA" TARGET="AI.SCHEMA"/>
      <TEMPLATE_PARAM SOURCE="self.UNIQUE_NAME" TARGET="AGGOUT.DESTINATION"/>
      <TEMPLATE_PARAM SOURCE="self.UNIQUE_NAME" TARGET="AI.ORIGIN" />
    </TEMPLATES>
  </CODEGENERATION>
  <RETURNS/>
</COMPONENT>