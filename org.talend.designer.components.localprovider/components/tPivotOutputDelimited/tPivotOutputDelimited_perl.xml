<COMPONENT>
  <HEADER
    PLATEFORM="ALL"
    SERIAL=""
    VERSION="0.101"
    STATUS="ALPHA"
    
    COMPATIBILITY="ALL"
    AUTHOR="Talend"
    RELEASE_DATE="20050320A"
    STARTABLE="false"
  >
    <SIGNATURE></SIGNATURE>
  </HEADER>

  <DOCUMENTATION>
    <URL/>
  </DOCUMENTATION>

  <CONNECTORS>
    <CONNECTOR CTYPE="FLOW" MAX_INPUT="1"/>
    <CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="0" MAX_INPUT="0"/>
    <CONNECTOR CTYPE="THEN_RUN" MAX_INPUT="1"/>
    <CONNECTOR CTYPE="REFERENCE"/>
    <CONNECTOR CTYPE="RUN_OK"/>
    <CONNECTOR CTYPE="RUN_ERROR"/>
    <CONNECTOR CTYPE="RUN_IF"/>
  </CONNECTORS>

  <PARAMETERS>
    <PARAMETER
      NAME="PIVOT_COLUMN"
      FIELD="PREV_COLUMN_LIST"
      REQUIRED="true"
      NUM_ROW="1"
    >
    </PARAMETER>

    <PARAMETER
      NAME="AGGREGATION_COLUMN"
      FIELD="PREV_COLUMN_LIST"
      REQUIRED="true"
      NUM_ROW="2"
      NB_LINES="2"
    >
    </PARAMETER>

    <PARAMETER
      NAME="AGGREGATION_FUNCTION"
      FIELD="CLOSED_LIST"
      REQUIRED="true"
      NUM_ROW="2"
      NB_LINES="5"
    >
      <ITEMS DEFAULT="sum">
          <ITEM NAME="SUM"    VALUE="sum"/>
          <ITEM NAME="COUNT"  VALUE="count"/>
          <ITEM NAME="MIN"    VALUE="min"/>
          <ITEM NAME="MAX"    VALUE="max"/>
          <ITEM NAME="FIRST"  VALUE="first"/>
          <ITEM NAME="LAST"   VALUE="last"/>
      </ITEMS>
    </PARAMETER>

    <PARAMETER
      NAME="GROUPBYS"
      FIELD="TABLE"
      REQUIRED="true"
      NUM_ROW="3"
      NB_LINES="2"
    >
      <ITEMS>
        <ITEM NAME="INPUT_COLUMN" FIELD="PREV_COLUMN_LIST" />
      </ITEMS>
    </PARAMETER>

    <PARAMETER NAME="FILENAME" FIELD="FILE" NUM_ROW="5" REQUIRED="true" REPOSITORY_VALUE="FILE_PATH">
      <DEFAULT>'__COMP_DEFAULT_FILE_DIR__/out.csv'</DEFAULT>
    </PARAMETER>

    <PARAMETER NAME="ROWSEPARATOR" FIELD="TEXT" NUM_ROW="6" REPOSITORY_VALUE="ROW_SEPARATOR">
      <DEFAULT>"\n"</DEFAULT>
    </PARAMETER>

    <PARAMETER NAME="FIELDSEPARATOR" FIELD="TEXT" NUM_ROW="7" REPOSITORY_VALUE="FIELD_SEPARATOR">
      <DEFAULT>';'</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="CSV_OPTION"
      FIELD="CHECK"
      REQUIRED="true"
      NUM_ROW="41"
    >
      <DEFAULT>false</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="ESCAPE_CHAR"
      FIELD="TEXT"
      NUM_ROW="42"
      REPOSITORY_VALUE="ESCAPE_CHAR"
      SHOW_IF="CSV_OPTION == 'true'"
    >
      <DEFAULT>'"'</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="TEXT_ENCLOSURE"
      FIELD="TEXT"
      NUM_ROW="43"
      REPOSITORY_VALUE="TEXT_ENCLOSURE"
      SHOW_IF="CSV_OPTION == 'true'"
    >
      <DEFAULT>'"'</DEFAULT>
    </PARAMETER>


   </PARAMETERS>

   <CODEGENERATION/>

   <RETURNS>
     <RETURN NAME="NB_LINE" TYPE="INTEGER" AVAILABILITY="AFTER"/>
   </RETURNS>
</COMPONENT>