<COMPONENT>
  <HEADER
    PLATEFORM="ALL"
    SERIAL=""
    VERSION="0.102"
    STATUS="ALPHA"
    
    COMPATIBILITY="ALL"
    AUTHOR="Talend"
    RELEASE_DATE="20050320A"
    STARTABLE="true"
  >
    <SIGNATURE/>
  </HEADER>

  <FAMILIES>
    <FAMILY>Orchestration</FAMILY>
  </FAMILIES>

  <DOCUMENTATION>
    <URL/>
  </DOCUMENTATION>

  <CONNECTORS>
  	<CONNECTOR CTYPE="FLOW" MAX_INPUT="0" MAX_OUTPUT="1"/>
    <CONNECTOR CTYPE="ITERATE" MAX_INPUT="1"/>
    <CONNECTOR CTYPE="SUBJOB_OK"/>
    <CONNECTOR CTYPE="COMPONENT_OK"/>
    <CONNECTOR CTYPE="COMPONENT_ERROR"/>
    <CONNECTOR CTYPE="RUN_IF"/>
  </CONNECTORS>

  <PARAMETERS>
    <PARAMETER NAME="WAIT" FIELD="TEXT" NUM_ROW="1">
      <DEFAULT>1</DEFAULT>
    </PARAMETER>

    <PARAMETER NAME="MAX_ITERATIONS" FIELD="TEXT" NUM_ROW="2">
      <DEFAULT></DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="DIRECTORY"
      FIELD="DIRECTORY"
      NUM_ROW="3"
      REQUIRED="true"
    >
      <DEFAULT>"__COMP_DEFAULT_FILE_DIR__/directory"</DEFAULT>
    </PARAMETER>

    <PARAMETER NAME="FILEMASK" FIELD="TEXT" NUM_ROW="4">
      <DEFAULT>"*.txt"</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="INCLUDE_SUBDIR"
      FIELD="CHECK"
      NUM_ROW="5"
    >
      <DEFAULT>false</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="CASE_SENSITIVE"
      FIELD="CHECK"
      NUM_ROW="5"
    >
      <DEFAULT>true</DEFAULT>
    </PARAMETER>

 	<PARAMETER
      NAME="INCLUDE_PRESENT"
      FIELD="CHECK"
      NUM_ROW="6"
    >
      <DEFAULT>false</DEFAULT>
    </PARAMETER>
    
    <PARAMETER
      NAME="ACTION_ON"
      FIELD="CLOSED_LIST"
      REQUIRED="true"
      NUM_ROW="7"
    >
      <ITEMS DEFAULT="filecreated">
        <ITEM NAME="FILE_NEW" VALUE="filecreated" />
        <ITEM NAME="FILE_DELETED" VALUE="filedeleted"/>
        <ITEM NAME="FILE_UPDATED" VALUE="fileupdated"/>
        <ITEM NAME="FILE_ALL" VALUE="fileall"/>
      </ITEMS>
    </PARAMETER>

    <PARAMETER
      NAME="THEN"
      FIELD="CLOSED_LIST"
      REQUIRED="true"
      NUM_ROW="8"
    >
      <ITEMS DEFAULT="continue">
        <ITEM NAME="CONTINUE" VALUE="continue" />
        <ITEM NAME="EXIT_LOOP" VALUE="exitloop" />
      </ITEMS>
    </PARAMETER>
    
	<PARAMETER NAME="SCHEMA" FIELD="SCHEMA_TYPE" REQUIRED="true" NUM_ROW="9">
      <TABLE READONLY="true">
      	<COLUMN NAME="CURRENT_ITERATION"	TYPE="id_Integer" />
      	<COLUMN NAME="PRESENT_FILE"			TYPE="id_String"  LENGTH="255" />
      	<COLUMN NAME="DELETED_FILE"			TYPE="id_String"  LENGTH="255" />
      	<COLUMN NAME="CREATED_FILE"			TYPE="id_String"  LENGTH="255" />
      	<COLUMN NAME="UPDATED_FILE"         TYPE="id_String"  LENGTH="255" />
      	<COLUMN NAME="FILENAME"             TYPE="id_String"  LENGTH="255"/>
      	<COLUMN NAME="NOT_UPDATED_FILE"             TYPE="id_String"  LENGTH="255"/>
      </TABLE>
	</PARAMETER>
	
  </PARAMETERS>
  
  <ADVANCED_PARAMETERS>
  	 <PARAMETER
      NAME="WAIT_RELEASE"
      FIELD="CHECK"
      NUM_ROW="5"
      SHOW_IF="(ACTION_ON == 'FILE_NEW') or (ACTION_ON == 'FILE_ALL')"
    >
      <DEFAULT>false</DEFAULT>
    </PARAMETER>

    <PARAMETER NAME="INTERVAL_CHECK" FIELD="TEXT" NUM_ROW="5" SHOW_IF="WAIT_RELEASE == 'true'">
      <DEFAULT>"500"</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="NON_UPDATE"
      FIELD="CHECK"
      NUM_ROW="10"
      SHOW_IF="(ACTION_ON == 'FILE_UPDATED')"
    >
      <DEFAULT>false</DEFAULT>
    </PARAMETER>
  </ADVANCED_PARAMETERS>

  <CODEGENERATION/>

  <RETURNS>
    <RETURN NAME="CURRENT_ITERATION" TYPE="id_Integer" AVAILABILITY="FLOW"/>
    <RETURN NAME="PRESENT_FILE" TYPE="id_String" AVAILABILITY="FLOW"/>
    <RETURN NAME="DELETED_FILE" TYPE="id_String" AVAILABILITY="FLOW"/>
    <RETURN NAME="CREATED_FILE" TYPE="id_String" AVAILABILITY="FLOW"/>
    <RETURN NAME="UPDATED_FILE" TYPE="id_String" AVAILABILITY="FLOW"/>
    <RETURN NAME="FILENAME" TYPE="id_String" AVAILABILITY="FLOW"/>
    <RETURN NAME="NOT_UPDATED_FILE" TYPE="id_String" AVAILABILITY="FLOW"/>
    
  </RETURNS>
</COMPONENT>
