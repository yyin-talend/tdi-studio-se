<COMPONENT>
  <HEADER
    PLATEFORM="ALL"
    SERIAL=""
    VERSION="0.102"
    STATUS="ALPHA"
    
    COMPATIBILITY="ALL"
    AUTHOR="Talend"
    RELEASE_DATE="20050320A"
    STARTABLE="true"
  >
    <SIGNATURE/>
  </HEADER>

  <FAMILIES>
    <FAMILY>Databases</FAMILY>
  </FAMILIES>

  <DOCUMENTATION>
    <URL/>
  </DOCUMENTATION>

  <CONNECTORS>
    <CONNECTOR CTYPE="FLOW" MAX_OUTPUT="0" MAX_INPUT="0"/>
    <CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="0" MAX_INPUT="1"/>
    <CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" />
    <CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1" />
    <CONNECTOR CTYPE="COMPONENT_OK"/>
    <CONNECTOR CTYPE="COMPONENT_ERROR"/>
    <CONNECTOR CTYPE="RUN_IF"/>
  </CONNECTORS>

  <PARAMETERS>
    <PARAMETER
      NAME="SCHEMA"
      FIELD="SCHEMA_TYPE"
      NUM_ROW="10"
    >
      <DEFAULT>''</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="CONNECTION"
      FIELD="COMPONENT_LIST"
      FILTER="REGEXP:^t(Mysql|Postgresql|Oracle)*Connection$"
      NUM_ROW="20"
    />

    <PARAMETER
      NAME="DBSCHEMA"
      FIELD="TEXT"
      NUM_ROW="39"
      REQUIRED="false"
    >
      <DEFAULT/>
    </PARAMETER>

    <PARAMETER
      NAME="TABLE"
      FIELD="TEXT"
      NUM_ROW="40"
      REQUIRED="true"
    >
      <DEFAULT>''</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="TABLE_ACTION"
      FIELD="CLOSED_LIST"
      NUM_ROW="50"
    >
      <ITEMS DEFAULT="NONE">
        <ITEM
          NAME="NONE"
          VALUE="NONE"
        />
        <ITEM
          NAME="DROP_CREATE"
          VALUE="DROP_CREATE"
        />
        <ITEM
          NAME="CREATE"
          VALUE="CREATE"
        />
        <ITEM
          NAME="CREATE_IF_NOT_EXISTS"
          VALUE="CREATE_IF_NOT_EXISTS"
        />
        <ITEM
          NAME="CLEAR"
          VALUE="CLEAR"
        />
        <ITEM
          NAME="TRUNCATE"
          VALUE="TRUNCATE"
        />
      </ITEMS>
    </PARAMETER>
  </PARAMETERS>

  <CODEGENERATION>
    <IMPORTS>
      <IMPORT
        NAME="MysqlOutput"
        MODULE="tMysqlOutput::Mysql"
        REQUIRED="true"
      />

      <IMPORT
        NAME="PostgresqlOutput"
        MODULE="tPostgresqlOutput::Postgresql"
        REQUIRED="true"
      />

      <IMPORT
        NAME="OracleOutput"
        MODULE="tOracleOutput::Oracle"
        REQUIRED="true"
      />
    </IMPORTS>
  </CODEGENERATION>

   
  <RETURNS>
    <RETURN NAME="QUERY" TYPE="STRING" AVAILABILITY="AFTER"/>
  </RETURNS>

</COMPONENT>