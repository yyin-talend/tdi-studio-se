<COMPONENT>

  <HEADER
    PLATEFORM="ALL"
    SERIAL=""
    VERSION="0.102"
    STATUS="ALPHA"
    
    COMPATIBILITY="ALL"
    AUTHOR="Talend"
    RELEASE_DATE="20050320A"
    STARTABLE="true"
  >
    <SIGNATURE/>
  </HEADER>

  <FAMILIES>
    <FAMILY>Databases/Sybase</FAMILY>
  </FAMILIES>

  <DOCUMENTATION>
    <URL/>
  </DOCUMENTATION>

  <CONNECTORS>
    <CONNECTOR CTYPE="FLOW" MAX_INPUT="0" MAX_OUTPUT="0"/>
    <CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="1" MAX_INPUT="1"/>
    <CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" />
    <CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1" />
    <CONNECTOR CTYPE="COMPONENT_OK" MAX_OUTPUT="1"/>
    <CONNECTOR CTYPE="COMPONENT_ERROR" MAX_OUTPUT="1"/>
    <CONNECTOR CTYPE="RUN_IF" MAX_OUTPUT="1"/>
  </CONNECTORS>

  <PARAMETERS>

    <PARAMETER
      NAME="PROPERTY"
      FIELD="PROPERTY_TYPE"
      SHOW="true"
      NUM_ROW="1"
      REPOSITORY_VALUE="DATABASE:SYBASE"
      SHOW_IF="USE_EXISTING_CONNECTION == 'false'"
    />
    
    <PARAMETER
      NAME="USE_EXISTING_CONNECTION"
      FIELD="CHECK"
      NUM_ROW="20"
    >
      <DEFAULT>false</DEFAULT>
    </PARAMETER>
    
    <PARAMETER
      NAME="CONNECTION"
      FIELD="COMPONENT_LIST"
      FILTER="tSybaseConnection"
      NUM_ROW="20"
      SHOW_IF="USE_EXISTING_CONNECTION == 'true'"
      DYNAMIC_SETTINGS="true"
    />

    <PARAMETER
      NAME="SERVER"
      FIELD="TEXT"
      NUM_ROW="30"
      REQUIRED="false"
      REPOSITORY_VALUE="SERVER_NAME"
      SHOW_IF="(USE_INTERFACE_FILE == 'false') and (USE_EXISTING_CONNECTION == 'false') and (TABLE_ACTION != 'NONE')"
    >
      <DEFAULT>"SYBASE_HOST"</DEFAULT>
    </PARAMETER>

   <PARAMETER
      NAME="PORT"
      FIELD="TEXT"
      NUM_ROW="30"
      REPOSITORY_VALUE="PORT"
      SHOW_IF="(USE_INTERFACE_FILE == 'false') and (USE_EXISTING_CONNECTION == 'false') and (TABLE_ACTION != 'NONE')"
    >
      <DEFAULT>"2648"</DEFAULT>
   </PARAMETER>

    <PARAMETER
      NAME="DBNAME"
      FIELD="TEXT"
      NUM_ROW="30"
      REQUIRED="false"
      REPOSITORY_VALUE="SID"
      SHOW_IF="(USE_EXISTING_CONNECTION == 'false') and (USE_INTERFACE_FILE == 'false')"
    >
      <DEFAULT>""</DEFAULT>
    </PARAMETER>
    
    <PARAMETER
      NAME="USER"
      FIELD="TEXT"
      NUM_ROW="40"
      REQUIRED="true"
      REPOSITORY_VALUE="USERNAME"
      SHOW_IF="(USE_EXISTING_CONNECTION == 'false') and (USE_INTERFACE_FILE == 'false')"
    >
      <DEFAULT>"sa"</DEFAULT>
    </PARAMETER>
    
    <PARAMETER
      NAME="PASS"
      FIELD="TEXT"
      NUM_ROW="40"
      REQUIRED="true"
      REPOSITORY_VALUE="PASSWORD"
      SHOW_IF="(USE_EXISTING_CONNECTION == 'false') and (USE_INTERFACE_FILE == 'false')"
    >
      <DEFAULT>""</DEFAULT>
    </PARAMETER>
    
    <PARAMETER
      NAME="DB_SCHEMA"
      FIELD="TEXT"
      NUM_ROW="40"
      REPOSITORY_VALUE="SCHEMA"
      REQUIRED="true"
      SHOW_IF="(USE_EXISTING_CONNECTION == 'false') and (USE_INTERFACE_FILE == 'false')"
    >
      <DEFAULT>""</DEFAULT>
    </PARAMETER>
        
   	<PARAMETER
      NAME="BCP_UTILITY"
      FIELD="FILE"
      NUM_ROW="50"
      REQUIRED="true"
    >
      <DEFAULT>"C:\sybase\OCS-12_5\bin\bcp.exe"</DEFAULT>
    </PARAMETER>


	<PARAMETER
		NAME="SERVERNAME"
		FIELD="TEXT"
		NUM_ROW="55"
		REQUIRED="false"
	>
		<DEFAULT>""</DEFAULT>
	</PARAMETER>
	
	<PARAMETER
		NAME="BATCHROW"
		FIELD="TEXT"
		NUM_ROW="55"
		REQUIRED="false"
	>
		<DEFAULT>0</DEFAULT>
	</PARAMETER>


    <PARAMETER
      NAME="TABLE"
      FIELD="TEXT"
      NUM_ROW="60"
      REQUIRED="true"
    >
      <DEFAULT>"mytable"</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="TABLE_ACTION"
      FIELD="CLOSED_LIST"
      NUM_ROW="60"
      NOT_SHOW_IF="PARALLELIZE == 'true'"
    >
      <ITEMS DEFAULT="NONE">
        <ITEM NAME="NONE" VALUE="NONE" />
        <ITEM NAME="DROP_CREATE" VALUE="DROP_CREATE"/>
        <ITEM NAME="CREATE" VALUE="CREATE"/>
        <ITEM NAME="CREATE_IF_NOT_EXISTS" VALUE="CREATE_IF_NOT_EXISTS"/>
        <ITEM NAME="CLEAR" VALUE="CLEAR"/>
        <ITEM NAME="TRUNCATE" VALUE="TRUNCATE"/>
      </ITEMS>
    </PARAMETER>
	
	<PARAMETER NAME="NOTE" FIELD="LABEL" NUM_ROW="60"
			NOT_SHOW_IF="(TABLE_ACTION == 'NONE') OR (USE_EXISTING_CONNECTION == 'false')"	
		>
		<DEFAULT>Warning : this component configuration will automatically generate a commit before bulk insert</DEFAULT>
	</PARAMETER>	

 	<PARAMETER
      NAME="USE_INTERFACE_FILE"
      FIELD="CHECK"
      NUM_ROW="65"
      SHOW_IF="USE_EXISTING_CONNECTION == 'false'"
    >
      <DEFAULT>false</DEFAULT>
    </PARAMETER>

  	<PARAMETER
      NAME="INTERFACE_FILE"
      FIELD="FILE"
      NUM_ROW="65"
      REQUIRED="true"
      NOT_SHOW_IF="(USE_INTERFACE_FILE == 'false') or (USE_EXISTING_CONNECTION == 'true')"
    >
      <DEFAULT>"C:\interface_file.Properties"</DEFAULT>
    </PARAMETER>
    
    <PARAMETER
      NAME="FILENAME"
      FIELD="FILE"
      NUM_ROW="70"
      REQUIRED="true"
    >
      <DEFAULT>"C:\talend_files\sybase_bulk.txt"</DEFAULT>
    </PARAMETER>

    <PARAMETER NAME="SCHEMA" FIELD="SCHEMA_TYPE" REQUIRED="true" NUM_ROW="80">
      <DEFAULT/> 
    </PARAMETER>

	<PARAMETER
      NAME="MAPPING"
      FIELD="MAPPING_TYPE"
      NUM_ROW="90"
      SHOW="false"
    >       
      <DEFAULT>sybase_id</DEFAULT>
    </PARAMETER>

   </PARAMETERS>
   
   <ADVANCED_PARAMETERS>
   
   	<PARAMETER 
		NAME="PROPERTIES" 
		FIELD="TEXT" 
		NUM_ROW="3" 
		REPOSITORY_VALUE="PROPERTIES_STRING"
		SHOW_IF="USE_EXISTING_CONNECTION == 'false'">
		<DEFAULT>""</DEFAULT>
	</PARAMETER>
	
    <PARAMETER
      NAME="DATA_ACTION"
      FIELD="CLOSED_LIST"
      NUM_ROW="5"
    >
      <ITEMS DEFAULT="INSERT">
        <ITEM NAME="INSERT" VALUE="INSERT"/>
        <ITEM NAME="UPDATE" VALUE="UPDATE"/>
      </ITEMS>
    </PARAMETER>    
    
    <PARAMETER
      NAME="FIELDS_TERMINATOR"
      FIELD="TEXT"
      NUM_ROW="8"
      REQUIRED="true"
    >
      <DEFAULT>";"</DEFAULT>
    </PARAMETER>
    
    <PARAMETER
      NAME="ROW_TERMINATOR"
      FIELD="TEXT"
      NUM_ROW="8"
      REQUIRED="true"
    >
      <DEFAULT>"\\n"</DEFAULT>
    </PARAMETER>
    
    <PARAMETER
      NAME="HEAD"
      FIELD="TEXT"
      NUM_ROW="8"
      REQUIRED="false"
    >
      <DEFAULT>"1"</DEFAULT>
    </PARAMETER>   
    
    <PARAMETER NAME="ENCODING"  FIELD="ENCODING_TYPE"  NUM_ROW="10" REQUIRED="true" >
      <DEFAULT>"ISO-8859-15"</DEFAULT>
    </PARAMETER>


    <PARAMETER NAME="OUTPUT" FIELD="CLOSED_LIST" NUM_ROW="10">
       <ITEMS DEFAULT="OUTPUT_TO_CONSOLE">
          <ITEM NAME="OUTPUT_TO_CONSOLE" VALUE="OUTPUT_TO_CONSOLE" />
          <ITEM NAME="RETRIEVE_OUTPUT"   VALUE="RETRIEVE_OUTPUT" />
       </ITEMS>
    </PARAMETER>
   </ADVANCED_PARAMETERS>

   <CODEGENERATION>
     <IMPORTS>
       <IMPORT NAME="Driver-Sybase" MODULE="jconn3.jar" REQUIRED="true" />
     </IMPORTS>   
   </CODEGENERATION>

   <RETURNS>
      <RETURN NAME="NB_LINE_DATA" TYPE="INTEGER" AVAILABILITY="AFTER"/>
      <RETURN NAME="LINE_BAD" TYPE="INTEGER" AVAILABILITY="AFTER"/>
   </RETURNS>
</COMPONENT>
