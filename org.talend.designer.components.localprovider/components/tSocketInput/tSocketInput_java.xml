<COMPONENT>
  <HEADER
    PLATEFORM="ALL"
    SERIAL=""
    VERSION="0.102"
    STATUS="ALPHA"
    
    COMPATIBILITY="ALL"
    AUTHOR="Talend"
    RELEASE_DATE="20070111A"
    STARTABLE="true"
	HAS_CONDITIONAL_OUTPUTS="true"    
  >
    <SIGNATURE/>
  </HEADER>

  <DOCUMENTATION>
    <URL/>
  </DOCUMENTATION>

  <CONNECTORS>
    <CONNECTOR CTYPE="FLOW" MAX_INPUT="0"/>
    <CONNECTOR NAME="REJECT" CTYPE="FLOW" MAX_INPUT="0" MAX_OUTPUT="1" LINE_STYLE="2" COLOR="FF0000" BASE_SCHEMA="FLOW" />
    <CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="1" MAX_INPUT="1"/>
    <CONNECTOR CTYPE="THEN_RUN" MAX_INPUT="1"/>
    <CONNECTOR CTYPE="REFERENCE"/>
    <CONNECTOR CTYPE="RUN_OK"/>
    <CONNECTOR CTYPE="RUN_ERROR"/>
    <CONNECTOR CTYPE="RUN_IF"/>
  </CONNECTORS>

  <PARAMETERS>

    <PARAMETER
      NAME="HOSTNAME"
      FIELD="TEXT"
      SHOW="true"
      NUM_ROW="10" 
    >
    	<DEFAULT>""</DEFAULT>
    </PARAMETER>
    
    <PARAMETER
      NAME="PORT"
      FIELD="TEXT"
      SHOW="true"
      NUM_ROW="10" 
    >
    	<DEFAULT>""</DEFAULT>
    </PARAMETER>
    
    <PARAMETER
      NAME="UNCOMPRESS"
      FIELD="CHECK"
      SHOW="true"
      NUM_ROW="20" 
    >
    	<DEFAULT>false</DEFAULT>
    </PARAMETER>
    
    <PARAMETER
      NAME="DIE_ON_ERROR"
      FIELD="CHECK"
      NUM_ROW="20"
    >
      <DEFAULT>false</DEFAULT>
    </PARAMETER>  

	<PARAMETER
      NAME="ROWSEPARATOR"
      FIELD="TEXT"
      NUM_ROW="30"
      REPOSITORY_VALUE="ROW_SEPARATOR"
    >
      <DEFAULT>"\n"</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="FIELDSEPARATOR"
      FIELD="TEXT"
      NUM_ROW="30"
      REPOSITORY_VALUE="FIELD_SEPARATOR"
    >
      <DEFAULT>";"</DEFAULT>
    </PARAMETER>
        
    <PARAMETER
      NAME="ESCAPE_CHAR"
      FIELD="TEXT"
      NUM_ROW="35"
      REPOSITORY_VALUE="ESCAPE_CHAR"
    >
      <DEFAULT>"""</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="TEXT_ENCLOSURE"
      FIELD="TEXT"
      NUM_ROW="35"
      REPOSITORY_VALUE="TEXT_ENCLOSURE"
    >
      <DEFAULT>"""</DEFAULT>
    </PARAMETER>

   <PARAMETER
      NAME="SCHEMA"
      FIELD="SCHEMA_TYPE"
      REQUIRED="true"
      NUM_ROW="50"
    >
      <DEFAULT/> 
    </PARAMETER>
    		
    <PARAMETER
      NAME="SCHEMA_REJECT"
      FIELD="SCHEMA_TYPE"
      REQUIRED="true"
      NUM_ROW="50"
      CONTEXT="REJECT"
      SHOW="true">
      <TABLE READONLY="true">
        <COLUMN NAME="errorCode" TYPE="id_String" LENGTH="255" READONLY="false" CUSTOM="true"/>
        <COLUMN NAME="errorMessage" TYPE="id_String" LENGTH="255" READONLY="false" CUSTOM="true"/>
      </TABLE>
    </PARAMETER>
    
    <PARAMETER
      NAME="ENCODING"
     FIELD="ENCODING_TYPE"
      NUM_ROW="70"
      REQUIRED="true"
      REPOSITORY_VALUE="ENCODING"
    >
      <DEFAULT>"ISO-8859-15"</DEFAULT>
    </PARAMETER>

   </PARAMETERS>

  <CODEGENERATION>
    <IMPORTS>
      <IMPORT  NAME="BZIP2" MODULE="bzip2.jar" REQUIRED="true"/>
      <IMPORT NAME="CSV_Reader" MODULE="javacsv.jar" REQUIRED="true" />
    </IMPORTS>
  </CODEGENERATION>

   <RETURNS>
      <RETURN NAME="NB_LINE" TYPE="id_Integer" AVAILABILITY="AFTER"/>
   </RETURNS>

</COMPONENT>