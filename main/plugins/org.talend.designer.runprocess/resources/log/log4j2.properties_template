<?xml version="1.0" encoding="UTF-8"?>
<Configuration >  
    <Appenders>  
        <Console name="Console" target="SYSTEM_OUT">  
            <PatternLayout pattern="[%highlight{%-5level}] %d{HH:mm:ss} %logger{36}- %msg%n" />
        </Console>  
    </Appenders>  
    
    <Loggers>  
        <Root level="INFO">
            <AppenderRef ref="Console" />  
        </Root>  
    </Loggers>  
</Configuration>