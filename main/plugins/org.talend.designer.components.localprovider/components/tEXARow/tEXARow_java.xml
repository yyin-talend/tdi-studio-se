<COMPONENT>
  <HEADER
    PLATEFORM="ALL"
    SERIAL=""
    VERSION="0.102"
    STATUS="ALPHA"
    COMPATIBILITY="ALL"
    AUTHOR="EXASOL"
    RELEASE_DATE="20081201A"
    STARTABLE="true"
    DATA_AUTO_PROPAGATE="false"
    HAS_CONDITIONAL_OUTPUTS="true"
    SCHEMA_AUTO_PROPAGATE="false"
	PARTITIONING="AUTO"
  LOG4J_ENABLED="true"
  >
    <SIGNATURE/>
  </HEADER>

  <FAMILIES>
    <FAMILY>Databases/EXASolution</FAMILY>
  </FAMILIES>

  <DOCUMENTATION>
    <URL/>
  </DOCUMENTATION>

  <CONNECTORS>
    <CONNECTOR CTYPE="FLOW" MAX_INPUT="1" MAX_OUTPUT="1"/>
    <CONNECTOR NAME="REJECT" NOT_SHOW_IF="(DIE_ON_ERROR == 'true')" CTYPE="FLOW" MAX_INPUT="0" MAX_OUTPUT="1" LINE_STYLE="2" COLOR="FF0000" BASE_SCHEMA="FLOW" />
    <CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="1" MAX_INPUT="1"/>
    <CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" />
    <CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1" />
    <CONNECTOR CTYPE="COMPONENT_OK"/>
    <CONNECTOR CTYPE="COMPONENT_ERROR"/>
    <CONNECTOR CTYPE="RUN_IF"/>
  </CONNECTORS>

  <PARAMETERS>
  
    <PARAMETER
      NAME="PROPERTY"
      FIELD="PROPERTY_TYPE"
      SHOW="true"
      NUM_ROW="2"
      REPOSITORY_VALUE="DATABASE:Exasol"
    />

    <PARAMETER
      NAME="HOST"
      FIELD="TEXT"
      NUM_ROW="3"
      REPOSITORY_VALUE="SERVER_NAME"
	REQUIRED="true"
    >
      <DEFAULT>""</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="PORT"
      FIELD="TEXT"
      NUM_ROW="3"
      REPOSITORY_VALUE="PORT"
      REQUIRED="true"
    >
      <DEFAULT>""</DEFAULT>
    </PARAMETER>    
    
	<PARAMETER
      NAME="DB_SCHEMA"
      FIELD="TEXT"
      NUM_ROW="3"
      SHOW="true"
      REPOSITORY_VALUE="SID"
	REQUIRED="true"
    >
      <DEFAULT>""</DEFAULT>
    </PARAMETER>    
     
    <PARAMETER
      NAME="USER"
      FIELD="TEXT"
      NUM_ROW="4"
      REPOSITORY_VALUE="USERNAME"
      REQUIRED="true"
    >
      <DEFAULT>""</DEFAULT>
    </PARAMETER>
    
    <PARAMETER
      NAME="PASS"
      FIELD="PASSWORD"
      NUM_ROW="4"
      REPOSITORY_VALUE="PASSWORD"
      REQUIRED="true"
    >
      <DEFAULT>""</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="SCHEMA_FLOW"
      FIELD="SCHEMA_TYPE"
      NUM_ROW="5"
    >
      <DEFAULT>""</DEFAULT>
    </PARAMETER>
    
    <PARAMETER
      NAME="SCHEMA_REJECT"
      FIELD="SCHEMA_TYPE"
      REQUIRED="true"
      NUM_ROW="5"
      CONTEXT="REJECT"
      SHOW="true">
      <TABLE READONLY="true">
        <COLUMN NAME="errorCode" TYPE="id_String" LENGTH="255" READONLY="false" CUSTOM="true"/>
        <COLUMN NAME="errorMessage" TYPE="id_String" LENGTH="255" READONLY="false" CUSTOM="true"/>
      </TABLE>
    </PARAMETER>    
    
	<PARAMETER
      NAME="TABLE"
      FIELD="DBTABLE"
      NUM_ROW="5"
      LOG4J_ENABLED="false"
    >
      <DEFAULT>""</DEFAULT>
    </PARAMETER>
    <PARAMETER
      NAME="QUERYSTORE"
      FIELD="QUERYSTORE_TYPE"
      NUM_ROW="6"
    >
      <DEFAULT>""</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="QUERY"
      FIELD="MEMO_SQL"
      NUM_ROW="7"
    >
      <DEFAULT>"select * from exa_all_objects "</DEFAULT>
    </PARAMETER>
    
    <PARAMETER
      NAME="DIE_ON_ERROR"
      FIELD="CHECK"
      NUM_ROW="8"
    >
      <DEFAULT>false</DEFAULT>
    </PARAMETER>

	<PARAMETER
      NAME="TYPE"
      FIELD="TEXT"
      NUM_ROW="9"
      SHOW="false"
      REPOSITORY_VALUE="TYPE"
    >
      <DEFAULT>Exasol</DEFAULT>
    </PARAMETER>
    
  </PARAMETERS>
  
  <ADVANCED_PARAMETERS>
  
  	<PARAMETER NAME="PROPERTIES" FIELD="TEXT" NUM_ROW="4" REPOSITORY_VALUE="PROPERTIES_STRING" >
		<DEFAULT>""</DEFAULT>
	</PARAMETER>
	
	<PARAMETER
      NAME="PROPAGATE_RECORD_SET"
      FIELD="CHECK"
      NUM_ROW="5"
    >
      <DEFAULT>false</DEFAULT>
    </PARAMETER>
    
    <PARAMETER
      NAME="RECORD_SET_COLUMN"
      FIELD="COLUMN_LIST"
      NUM_ROW="5"
      SHOW_IF="PROPAGATE_RECORD_SET == 'true'"
    />
	<PARAMETER NAME="ENCODING" FIELD="ENCODING_TYPE" NUM_ROW="8"
		REQUIRED="true"  SHOW="false">
		<DEFAULT>"ISO-8859-15"</DEFAULT>
	</PARAMETER>

	<PARAMETER NAME="COMMIT_EVERY" FIELD="TEXT" NUM_ROW="8"
		REQUIRED="true" >
		<DEFAULT>10000</DEFAULT>
	</PARAMETER>
  </ADVANCED_PARAMETERS>

   <CODEGENERATION>
     <IMPORTS>
		<IMPORT NAME="Driver-EXASolution" MODULE="exajdbc.jar" MVN="mvn:org.talend.libraries/exajdbc/6.0.0"  REQUIRED="true" />
     </IMPORTS>
   </CODEGENERATION>

  <RETURNS>
    <RETURN NAME="QUERY" TYPE="id_String" AVAILABILITY="FLOW"/>
  </RETURNS>
</COMPONENT>
