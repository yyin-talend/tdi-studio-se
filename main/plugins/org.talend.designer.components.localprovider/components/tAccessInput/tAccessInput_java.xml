<COMPONENT>

	<HEADER PLATEFORM="ALL" SERIAL="" VERSION="0.102" STATUS="ALPHA"
		COMPATIBILITY="ALL" AUTHOR="Talend" RELEASE_DATE="20070326A"
		STARTABLE="true" LOG4J_ENABLED="true">
		<SIGNATURE />
	</HEADER>

  <FAMILIES>
    <FAMILY>Databases/Access</FAMILY>
  </FAMILIES>

	<DOCUMENTATION>
		<URL />
	</DOCUMENTATION>

	<CONNECTORS>
		<CONNECTOR CTYPE="FLOW" MAX_INPUT="0" MAX_OUTPUT="1"/>
		<CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="1" MAX_INPUT="1" />
		<CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" />
		<CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1" />
		<CONNECTOR CTYPE="COMPONENT_OK" />
		<CONNECTOR CTYPE="COMPONENT_ERROR" />
		<CONNECTOR CTYPE="RUN_IF" />
	</CONNECTORS>

	<PARAMETERS>

		<PARAMETER NAME="PROPERTY" FIELD="PROPERTY_TYPE" SHOW="true"
			NUM_ROW="1" REPOSITORY_VALUE="DATABASE:ACCESS" SHOW_IF="USE_EXISTING_CONNECTION == 'false'"/>
			
		<PARAMETER NAME="USE_EXISTING_CONNECTION" FIELD="CHECK"
			NUM_ROW="2">
			<DEFAULT>false</DEFAULT>
		</PARAMETER>
		<PARAMETER NAME="CONNECTION" FIELD="COMPONENT_LIST" FILTER="tAccessConnection" REQUIRED="true"
			NUM_ROW="2" SHOW_IF="USE_EXISTING_CONNECTION == 'true'" DYNAMIC_SETTINGS="true"/>	
		
		<PARAMETER NAME="JDBC_ODBC" FIELD="CLOSED_LIST" NUM_ROW="5" SHOW_IF="USE_EXISTING_CONNECTION == 'false'">
			<ITEMS DEFAULT="JDBC">
				<ITEM NAME="ODBC" VALUE="ODBC"/>
				<ITEM NAME="JDBC" VALUE="JDBC" />
			</ITEMS>
		</PARAMETER>	
			
		<PARAMETER NAME="DB_VERSION" FIELD="CLOSED_LIST" NUM_ROW="10"
			REPOSITORY_VALUE="DB_VERSION" SHOW_IF="(USE_EXISTING_CONNECTION == 'false') and (JDBC_ODBC=='ODBC')">
			<ITEMS DEFAULT="Access_2003">
				<ITEM NAME="Access_2003" VALUE="Access_2003"/>
				<ITEM NAME="Access_2007" VALUE="Access_2007" />
			</ITEMS>
		</PARAMETER>			
			
		<PARAMETER NAME="TYPE" FIELD="TEXT" NUM_ROW="20" SHOW="false"
			REPOSITORY_VALUE="TYPE">
			<DEFAULT>Access</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="DBNAME" FIELD="FILE" NUM_ROW="20"
			REQUIRED="true" REPOSITORY_VALUE="FILE" SHOW_IF="USE_EXISTING_CONNECTION == 'false'">
			<DEFAULT>"__COMP_DEFAULT_FILE_DIR__/in.mdb"</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="USER" FIELD="TEXT" NUM_ROW="30"
			REPOSITORY_VALUE="USERNAME" REQUIRED="true" SHOW_IF="USE_EXISTING_CONNECTION == 'false'">
			<DEFAULT>""</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="PASS" FIELD="PASSWORD" NUM_ROW="30"
			REPOSITORY_VALUE="PASSWORD" REQUIRED="true" SHOW_IF="USE_EXISTING_CONNECTION == 'false'">
			<DEFAULT>""</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="SCHEMA" FIELD="SCHEMA_TYPE" NUM_ROW="40">
			<DEFAULT>""</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="TABLE" FIELD="DBTABLE" NUM_ROW="50">
			<DEFAULT>""</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="QUERYSTORE" FIELD="QUERYSTORE_TYPE"
			NUM_ROW="60">
			<DEFAULT>""</DEFAULT>
		</PARAMETER>
		
		<PARAMETER
	      NAME="GUESS_SCHEMA"
	      FIELD="GUESS_SCHEMA"
	      NUM_ROW="60"
	    >
	      <DEFAULT>""</DEFAULT>
	    </PARAMETER>

		<PARAMETER NAME="QUERY" FIELD="MEMO_SQL" NUM_ROW="70"
			REQUIRED="true">
			<DEFAULT>"select * from sysobjects "</DEFAULT>
		</PARAMETER>
		
		<PARAMETER NAME="MAPPING" FIELD="MAPPING_TYPE" NUM_ROW="100"
			SHOW="false">
			<DEFAULT>access_id</DEFAULT>
		</PARAMETER>

	</PARAMETERS>

	<ADVANCED_PARAMETERS>
		<PARAMETER NAME="PROPERTIES" FIELD="TEXT" NUM_ROW="10" REPOSITORY_VALUE="PROPERTIES_STRING" SHOW_IF="USE_EXISTING_CONNECTION == 'false'">
			<DEFAULT>""</DEFAULT>
		</PARAMETER>
		<PARAMETER NAME="NOTE" FIELD="LABEL" NUM_ROW="11" SHOW_IF="USE_EXISTING_CONNECTION == 'false'">
			<DEFAULT>*Note: Example for Additional JDBC Parameters: "parameterName1=value1&amp;&amp;parameterName2=value2"</DEFAULT>
		</PARAMETER>
		
		<PARAMETER NAME="ENCODING" FIELD="ENCODING_TYPE" NUM_ROW="80"
			REQUIRED="true" SHOW="false">
			<DEFAULT>"ISO-8859-15"</DEFAULT>
		</PARAMETER>
		
		<PARAMETER NAME="TRIM_ALL_COLUMN" FIELD="CHECK" NUM_ROW="300">
			<DEFAULT>false</DEFAULT>
		</PARAMETER>
		
		<PARAMETER NAME="TRIM_COLUMN" FIELD="TABLE" NUM_ROW="400"
			NB_LINES="5" SHOW_IF="TRIM_ALL_COLUMN == 'false'">
			<ITEMS BASED_ON_SCHEMA="true">
				<ITEM NAME="TRIM" FIELD="CHECK"></ITEM>
			</ITEMS>
		</PARAMETER>				
	</ADVANCED_PARAMETERS>

	<CODEGENERATION>
	 <IMPORTS>
		<IMPORT NAME="Driver-HSQLDb" MODULE="hsqldb.jar" UrlPath="platform:/plugin/org.talend.libraries.jdbc.hsql/lib/hsqldb.jar" REQUIRED_IF="(USE_EXISTING_CONNECTION == 'false') and (JDBC_ODBC=='JDBC')"/>
		<IMPORT NAME="Driver-ucanaccess" MODULE="ucanaccess-2.0.9.4.jar" REQUIRED_IF="(USE_EXISTING_CONNECTION == 'false') and (JDBC_ODBC=='JDBC')"/>
		<IMPORT NAME="Driver-JACKCESS" MODULE="jackcess-2.0.8.jar" UrlPath="platform:/plugin/org.talend.libraries.jdbc.access/lib/jackcess-2.0.8.jar" REQUIRED_IF="(USE_EXISTING_CONNECTION == 'false') and (JDBC_ODBC=='JDBC')"/>
		<IMPORT NAME="common2.6" MODULE="commons-lang-2.6.jar"  UrlPath="platform:/plugin/org.talend.libraries.apache.common/lib/commons-lang-2.6.jar" REQUIRED_IF="(USE_EXISTING_CONNECTION == 'false') and (JDBC_ODBC=='JDBC')"/>
		<IMPORT NAME="common-logging1.1.3" MODULE="commons-logging-1.1.3.jar" UrlPath="platform:/plugin/org.talend.libraries.apache.common/lib/commons-logging-1.1.3.jar" REQUIRED_IF="(USE_EXISTING_CONNECTION == 'false') and (JDBC_ODBC=='JDBC')"/>
	</IMPORTS>
	</CODEGENERATION>

	<RETURNS>
		<RETURN NAME="NB_LINE" TYPE="id_Integer" AVAILABILITY="AFTER" />
		<RETURN NAME="QUERY" TYPE="id_String" AVAILABILITY="FLOW" />
	</RETURNS>
</COMPONENT>
