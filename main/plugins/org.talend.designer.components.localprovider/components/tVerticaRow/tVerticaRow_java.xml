<COMPONENT>
	<HEADER PLATEFORM="ALL" SERIAL="" VERSION="0.102" STATUS="ALPHA"
		COMPATIBILITY="ALL" AUTHOR="Talend" RELEASE_DATE="20070326A" LOG4J_ENABLED="true"
		STARTABLE="true" DATA_AUTO_PROPAGATE="false" HAS_CONDITIONAL_OUTPUTS="true" SCHEMA_AUTO_PROPAGATE="false" PARTITIONING="AUTO">
		<SIGNATURE />
	</HEADER>

  <FAMILIES>
    <FAMILY>Databases/DB Specifics/Vertica</FAMILY>
  </FAMILIES>

	<DOCUMENTATION>
		<URL />
	</DOCUMENTATION>

	<CONNECTORS>
		<CONNECTOR CTYPE="FLOW" MAX_INPUT="1" MAX_OUTPUT="1"/>
		<CONNECTOR NAME="REJECT" NOT_SHOW_IF="(DIE_ON_ERROR == 'true')" CTYPE="FLOW" MAX_INPUT="0"
			LINE_STYLE="2" COLOR="FF0000" BASE_SCHEMA="FLOW" />
		<CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="1" MAX_INPUT="1" />
		<CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" />
		<CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1" />
		<CONNECTOR CTYPE="COMPONENT_OK" />
		<CONNECTOR CTYPE="COMPONENT_ERROR" />
		<CONNECTOR CTYPE="RUN_IF" />
	</CONNECTORS>

	<PARAMETERS>
		<PARAMETER NAME="PROPERTY" FIELD="PROPERTY_TYPE" SHOW="true"
			NUM_ROW="1" REPOSITORY_VALUE="DATABASE:VERTICA"
			 SHOW_IF="USE_EXISTING_CONNECTION == 'false'" />

	<PARAMETER
		NAME="DB_VERSION"
		FIELD="CLOSED_LIST"
		NUM_ROW="10"
		REPOSITORY_VALUE="DB_VERSION"
		SHOW_IF="USE_EXISTING_CONNECTION == 'false'">
		<ITEMS DEFAULT="VERTICA_9_0">
			<ITEM NAME="VERTICA_3" VALUE="vertica_3.0_jdk_5.jar" />
			<ITEM NAME="VERTICA_3.5" VALUE="vertica_3.5_jdk_5.jar" />
			<ITEM NAME="VERTICA_4" VALUE="vertica_4.0_jdk_5.jar" />
			<ITEM NAME="VERTICA_4.1" VALUE="vertica_4.1.7_jdk_5.jar" />
			<ITEM NAME="VERTICA_5.0" VALUE="vertica_4.1.14_jdk_5.jar" />
            <ITEM NAME="VERTICA_5_1" VALUE="VERTICA_5_1" />
			<ITEM NAME="VERTICA_6_0" VALUE="VERTICA_6_0" />
			<ITEM NAME="VERTICA_6_1_X" VALUE="VERTICA_6_1_X" />
			<ITEM NAME="VERTICA_7_0_X" VALUE="VERTICA_7_0_X" />
			<ITEM NAME="VERTICA_7_1_X" VALUE="VERTICA_7_1_X" />
			<ITEM NAME="VERTICA_9_0" VALUE="VERTICA_9_0" />
		</ITEMS>
	</PARAMETER>

	    <PARAMETER NAME="USE_EXISTING_CONNECTION" FIELD="CHECK" NUM_ROW="20">
	      <DEFAULT>false</DEFAULT>
	    </PARAMETER>

	    <PARAMETER NAME="CONNECTION" FIELD="COMPONENT_LIST" REQUIRED="true" FILTER="tVerticaConnection"
	      NUM_ROW="20" SHOW_IF="USE_EXISTING_CONNECTION == 'true'" DYNAMIC_SETTINGS="true"/>

		<PARAMETER NAME="HOST" FIELD="TEXT" NUM_ROW="30"
			REPOSITORY_VALUE="SERVER_NAME" SHOW_IF="USE_EXISTING_CONNECTION == 'false'" >
			<DEFAULT>""</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="PORT" FIELD="TEXT" NUM_ROW="30"
			REPOSITORY_VALUE="PORT" SHOW_IF="USE_EXISTING_CONNECTION == 'false'" >
			<DEFAULT>"5433"</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="DBNAME" FIELD="TEXT" NUM_ROW="40"
			REPOSITORY_VALUE="SID" SHOW_IF="USE_EXISTING_CONNECTION == 'false'" >
			<DEFAULT>""</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="SCHEMA_DB" FIELD="TEXT" NUM_ROW="40"
			REPOSITORY_VALUE="SCHEMA" SHOW_IF="USE_EXISTING_CONNECTION == 'false'">
			<DEFAULT>""</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="TYPE" FIELD="TEXT" NUM_ROW="30" SHOW="false"
			REPOSITORY_VALUE="TYPE">
			<DEFAULT>VERTICA</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="USER" FIELD="TEXT" NUM_ROW="50"
			REPOSITORY_VALUE="USERNAME" SHOW_IF="USE_EXISTING_CONNECTION == 'false'" >
			<DEFAULT>""</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="PASS" FIELD="PASSWORD" NUM_ROW="50"
			REPOSITORY_VALUE="PASSWORD" SHOW_IF="USE_EXISTING_CONNECTION == 'false'" >
			<DEFAULT>""</DEFAULT>
		</PARAMETER>
		
		<PARAMETER NAME="SCHEMA_FLOW" FIELD="SCHEMA_TYPE" NUM_ROW="60">
			<DEFAULT>""</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="SCHEMA_REJECT" FIELD="SCHEMA_TYPE"
			REQUIRED="true" NUM_ROW="60" CONTEXT="REJECT" SHOW="true">
			<TABLE READONLY="true">
				<COLUMN NAME="errorCode" TYPE="id_String" LENGTH="255"
					READONLY="false" CUSTOM="true" />
				<COLUMN NAME="errorMessage" TYPE="id_String"
					LENGTH="255" READONLY="false" CUSTOM="true" />
			</TABLE>
		</PARAMETER>

		<PARAMETER NAME="TABLE" FIELD="DBTABLE" NUM_ROW="60" LOG4J_ENABLED="false">
			<DEFAULT>""</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="QUERYSTORE" FIELD="QUERYSTORE_TYPE"
			NUM_ROW="70">
			<DEFAULT>""</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="QUERY" FIELD="MEMO_SQL" NUM_ROW="80">
			<DEFAULT>"select * from mytable"</DEFAULT>
		</PARAMETER>
		
		<PARAMETER
	      NAME="USE_NB_LINE"
	      FIELD="CLOSED_LIST"
	      NUM_ROW="100"
	    >
			<ITEMS DEFAULT="NONE">
				<ITEM NAME="NONE" VALUE="NONE" />
		        <ITEM NAME="NB_LINE_INSERTED" VALUE="NB_LINE_INSERTED" />
		        <ITEM NAME="NB_LINE_UPDATED" VALUE="NB_LINE_UPDATED"/>
		        <ITEM NAME="NB_LINE_DELETED" VALUE="NB_LINE_DELETED"/>
			</ITEMS>
	    </PARAMETER>
		<PARAMETER
			NAME="USE_NB_LINE_NOTE"
			FIELD="LABEL"
			NUM_ROW="100">
			<DEFAULT>* Only used if the query is an insert, an update or a delete.</DEFAULT>
		</PARAMETER>		

		<PARAMETER NAME="DIE_ON_ERROR" FIELD="CHECK" NUM_ROW="120">
			<DEFAULT>true</DEFAULT>
		</PARAMETER>

	</PARAMETERS>

	<ADVANCED_PARAMETERS>
		<PARAMETER
			NAME="PROPERTIES"
			FIELD="TEXT"
			NUM_ROW="1"
			REPOSITORY_VALUE="PROPERTIES_STRING"
			SHOW_IF="USE_EXISTING_CONNECTION == 'false'">
			<DEFAULT>""</DEFAULT>
		</PARAMETER>
			
	  	<PARAMETER
	      NAME="PROPAGATE_RECORD_SET"
	      FIELD="CHECK"
	      NUM_ROW="5"
	    >
	      <DEFAULT>false</DEFAULT>
	    </PARAMETER>

	    <PARAMETER
	      NAME="RECORD_SET_COLUMN"
	      FIELD="COLUMN_LIST"
	      NUM_ROW="5"
	      SHOW_IF="PROPAGATE_RECORD_SET == 'true'"
	    />

		<PARAMETER
	      NAME="USE_PREPAREDSTATEMENT"
	      FIELD="CHECK"
	      NUM_ROW="6"
	    >
	      <DEFAULT>false</DEFAULT>
	    </PARAMETER>

		<PARAMETER
	      NAME="SET_PREPAREDSTATEMENT_PARAMETERS"
	      FIELD="TABLE"
	      REQUIRED="false"
	      NUM_ROW="7"
	      NB_LINES="3"
	      SHOW_IF="(USE_PREPAREDSTATEMENT == 'true')"
	    >
	      <ITEMS>
	        <ITEM NAME="PARAMETER_INDEX" VALUE="" />
			<ITEM NAME="PARAMETER_TYPE" VALUE="String" FIELD="CLOSED_LIST">
				<ITEMS DEFAULT="String">
	        		<ITEM NAME="BigDecimal"  	VALUE="BigDecimal"/>
	        		<ITEM NAME="Blob"  			VALUE="Blob"/>
	        		<ITEM NAME="Boolean"  		VALUE="Boolean"/>
	        		<ITEM NAME="Byte"  			VALUE="Byte"/>
	        		<ITEM NAME="Bytes"  		VALUE="Bytes"/>
	        		<ITEM NAME="Clob"  			VALUE="Clob"/>
	        		<ITEM NAME="Date" 			VALUE="Date"/>
	        		<ITEM NAME="Double"			VALUE="Double"/>
	        		<ITEM NAME="Float" 			VALUE="Float"/>
	        		<ITEM NAME="Int" 			VALUE="Int"/>
	        		<ITEM NAME="Long" 			VALUE="Long"/>
	        		<ITEM NAME="Object" 		VALUE="Object"/>
	        		<ITEM NAME="Short" 			VALUE="Short"/>
	        		<ITEM NAME="String" 		VALUE="String"/>
	        		<ITEM NAME="Time" 			VALUE="Time"/>
	        		<ITEM NAME="Null" 			VALUE="Null"/>
	        	</ITEMS>
			</ITEM>
	        <ITEM NAME="PARAMETER_VALUE" VALUE="" />
	      </ITEMS>
	    </PARAMETER>

		<PARAMETER NAME="ENCODING" FIELD="TEXT" NUM_ROW="8"
			REQUIRED="true" SHOW="false">
			<DEFAULT>"ISO-8859-15"</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="COMMIT_EVERY" FIELD="TEXT" NUM_ROW="10"
			REQUIRED="true">
			<DEFAULT>100</DEFAULT>
		</PARAMETER>
	</ADVANCED_PARAMETERS>

   <CODEGENERATION>
       <IMPORTS>
		<IMPORT NAME="Driver-VERTICA" MODULE="vertica_3.0_jdk_5.jar" MVN="mvn:org.talend.libraries/vertica_3.0_jdk_5/6.0.0"   REQUIRED="false" />
		<IMPORT NAME="Driver-VERTICA_3.5" MODULE="vertica_3.5_jdk_5.jar" MVN="mvn:org.talend.libraries/vertica_3.5_jdk_5/6.0.0"   REQUIRED="false" />
		<IMPORT NAME="Driver-VERTICA_4" MODULE="vertica_4.0_jdk_5.jar" MVN="mvn:org.talend.libraries/vertica_4.0_jdk_5/6.0.0"   REQUIRED="false" />
		<IMPORT NAME="Driver-VERTICA_4.1" MODULE="vertica_4.1.7_jdk_5.jar" MVN="mvn:org.talend.libraries/vertica_4.1.7_jdk_5/6.0.0"   REQUIRED="false" />
		<IMPORT NAME="Driver-VERTICA_5.0" MODULE="vertica_4.1.14_jdk_5.jar" MVN="mvn:org.talend.libraries/vertica_4.1.14_jdk_5/6.0.0"   REQUIRED="false" />
		<IMPORT NAME="Driver-VERTICA_5.1" MODULE="vertica_5.1.6_jdk_5.jar" MVN="mvn:org.talend.libraries/vertica_5.1.6_jdk_5/6.0.0"   REQUIRED_IF="(USE_EXISTING_CONNECTION == 'false') and (DB_VERSION=='VERTICA_5_1')" />
		<IMPORT NAME="Driver-VERTICA_6.0" MODULE="vertica-jdk5-6.0.2-0.jar" MVN="mvn:org.talend.libraries/vertica-jdk5-6.0.2-0/6.0.0"   REQUIRED_IF="(USE_EXISTING_CONNECTION == 'false') and (DB_VERSION=='VERTICA_6_0')" />
		<IMPORT NAME="Driver-VERTICA_6.1.2" MODULE="vertica-jdk5-6.1.2-0.jar" MVN="mvn:org.talend.libraries/vertica-jdk5-6.1.2-0/6.0.0"   REQUIRED_IF="(USE_EXISTING_CONNECTION == 'false') and (DB_VERSION=='VERTICA_6_1_X')" />
		<IMPORT NAME="Driver-VERTICA_7.0.1" MODULE="vertica-jdbc-7.0.1-0.jar" MVN="mvn:org.talend.libraries/vertica-jdbc-7.0.1-0/6.0.0"   REQUIRED_IF="(USE_EXISTING_CONNECTION == 'false') and (DB_VERSION=='VERTICA_7_0_X')" />
		<IMPORT NAME="Driver-VERTICA_7.1.2" MODULE="vertica-jdbc-7.1.2-0.jar" MVN="mvn:org.talend.libraries/vertica-jdbc-7.1.2-0/6.0.0"   REQUIRED_IF="(USE_EXISTING_CONNECTION == 'false') and (DB_VERSION=='VERTICA_7_1_X')" />
		<IMPORT NAME="Driver-VERTICA_9.0" MODULE="vertica-jdbc-9.3.1-0.jar" MVN="mvn:com.vertica/vertica-jdbc/9.3.1-0"   REQUIRED_IF="(USE_EXISTING_CONNECTION == 'false') and (DB_VERSION=='VERTICA_9_0')" />
    </IMPORTS>
  </CODEGENERATION>

	<RETURNS>
		<RETURN NAME="QUERY" TYPE="id_String" AVAILABILITY="FLOW" />
		<RETURN NAME="NB_LINE_UPDATED"  TYPE="id_Integer" AVAILABILITY="AFTER"/>
	    <RETURN NAME="NB_LINE_INSERTED" TYPE="id_Integer" AVAILABILITY="AFTER"/>
	    <RETURN NAME="NB_LINE_DELETED"  TYPE="id_Integer" AVAILABILITY="AFTER"/>		
	</RETURNS>
</COMPONENT>
