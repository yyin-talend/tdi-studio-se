<COMPONENT>
  <HEADER
    PLATEFORM="ALL"
    SERIAL=""
    VERSION="0.102"
    STATUS="ALPHA"

    COMPATIBILITY="ALL"
    AUTHOR="Talend"
    RELEASE_DATE="20050320A"
    STARTABLE="true"
  >
    <SIGNATURE/>
  </HEADER>

  <FAMILIES>
    <FAMILY>Internet</FAMILY>
  </FAMILIES>

  <DOCUMENTATION>
    <URL/>
  </DOCUMENTATION>

  <CONNECTORS>
    <CONNECTOR CTYPE="FLOW" MAX_INPUT="0" MAX_OUTPUT="1"/>
    <CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="1" MAX_INPUT="1"/>
    <CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1"/>
    <CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1"/>
    <CONNECTOR CTYPE="COMPONENT_OK"/>
    <CONNECTOR CTYPE="COMPONENT_ERROR"/>
    <CONNECTOR CTYPE="RUN_IF"/>
  </CONNECTORS>

  <PARAMETERS>

    <PARAMETER
      NAME="URL"
      FIELD="TEXT"
      NUM_ROW="10"
      REQUIRED="true"
    >
      <DEFAULT>"http://svn.gna.org/svn/phpwebgallery"</DEFAULT>
    </PARAMETER>

    <PARAMETER
		NAME="NEED_AUTH"
		FIELD="CHECK"
		REQUIRED="true"
		NUM_ROW="20"
	 >
		<DEFAULT>false</DEFAULT>
	</PARAMETER>

    <PARAMETER
      NAME="USERNAME"
      FIELD="TEXT"
      NUM_ROW="30"
      REQUIRED="true"
      SHOW_IF="NEED_AUTH == 'true'"
    >
      <DEFAULT>"anonymous"</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="PASSWORD"
      FIELD="PASSWORD"
      NUM_ROW="30"
      REQUIRED="true"
      SHOW_IF="NEED_AUTH == 'true'"
    >
      <DEFAULT>"anonymous"</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="FROM_REV"
      FIELD="TEXT"
      NUM_ROW="40"
    >
      <DEFAULT>1</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="SINGLE_REV"
      FIELD="CHECK"
      NUM_ROW="40"
    >
      <DEFAULT>false</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="TO_REV"
      FIELD="TEXT"
      NUM_ROW="50"
      SHOW_IF="SINGLE_REV == 'false'"
    >
      <DEFAULT>'HEAD'</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="SCHEMA"
      FIELD="SCHEMA_TYPE"
      READONLY="true"
      REQUIRED="true"
      NUM_ROW="60"
    >
      <TABLE  READONLY="true">
        <COLUMN NAME="revision" TYPE="id_Integer"/>
        <COLUMN NAME="author" TYPE="id_String" LENGTH="50"/>
        <COLUMN NAME="date" TYPE="id_Date" PATTERN='"yyyy-MM-dd HH:mm:ss"'/>
        <COLUMN NAME="message" TYPE="id_String" LENGTH="10000"/>
        <COLUMN NAME="nb_file_added" TYPE="id_Integer"/>
        <COLUMN NAME="nb_file_modified" TYPE="id_Integer"/>
        <COLUMN NAME="nb_file_deleted" TYPE="id_Integer"/>
      </TABLE>
    </PARAMETER>

  </PARAMETERS>

  <CODEGENERATION>
     <IMPORTS>
       <IMPORT NAME="SVN" MODULE="svnkit-javahl.jar" MVN="mvn:org.talend.libraries/svnkit-javahl/6.0.0"  UrlPath="platform:/plugin/org.talend.libraries.svn/lib/svnkit-javahl.jar" REQUIRED="true" />
     </IMPORTS>
  </CODEGENERATION>

  <RETURNS>
    <RETURN NAME="NB_LINE" TYPE="id_Integer" AVAILABILITY="AFTER"/>
  </RETURNS>

</COMPONENT>
