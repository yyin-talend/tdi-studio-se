<!-- $Id: tFileOutputLDIF.xml 291 2006-11-01 07:34:12Z nrousseau $ -->
<COMPONENT>
	<HEADER PLATEFORM="ALL" SERIAL="" VERSION="0.101" STATUS="ALPHA"
		COMPATIBILITY="ALL" AUTHOR="Talend" RELEASE_DATE="20050320A"
		STARTABLE="false" PARTITIONING="NONE">
		<SIGNATURE></SIGNATURE>
	</HEADER>

  <FAMILIES>
    <FAMILY>File/Output</FAMILY>
  </FAMILIES>

	<DOCUMENTATION>
		<URL />
	</DOCUMENTATION>

	<CONNECTORS>
		<CONNECTOR CTYPE="FLOW" MAX_INPUT="1" MAX_OUTPUT="1" />
		<CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="0" MAX_INPUT="0" />
		<CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" />
		<CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1" />
		<CONNECTOR CTYPE="COMPONENT_OK" />
		<CONNECTOR CTYPE="COMPONENT_ERROR" />
		<CONNECTOR CTYPE="RUN_IF" />
	</CONNECTORS>

	<PARAMETERS>

		<PARAMETER NAME="FILENAME" FIELD="FILE" NUM_ROW="20"
			REQUIRED="true" REPOSITORY_VALUE="FILE_PATH">
			<DEFAULT>"__COMP_DEFAULT_FILE_DIR__/out.ldif"</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="WRAP" FIELD="TEXT" NUM_ROW="30">
			<DEFAULT>78</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="CHANGETYPE" FIELD="CLOSED_LIST" NUM_ROW="40">
			<ITEMS DEFAULT="modify">
				<ITEM NAME="ADD" VALUE="add" />
				<ITEM NAME="MODIFY" VALUE="modify" />
				<ITEM NAME="DELETE" VALUE="delete" />
				<ITEM NAME="MODRDN" VALUE="modrdn" />
				<ITEM NAME="NONE" VALUE="none" />
			</ITEMS>
		</PARAMETER>

		<PARAMETER NAME="MODIFYCONFIG" FIELD="TABLE" REQUIRED="false"	NUM_ROW="44" NB_LINES="3" SHOW_IF="CHANGETYPE=='MODIFY'">
			<ITEMS BASED_ON_SCHEMA="true">
				<ITEM NAME="OPERATION" FIELD="CLOSED_LIST">
					<ITEMS DEFAULT="add">
						<ITEM NAME="ADD" VALUE="add" />
						<ITEM NAME="REPLACE" VALUE="replace" />
						<ITEM NAME="DELETE" VALUE="delete" />
						<ITEM NAME="NONE" VALUE="none" />
					</ITEMS>
				</ITEM>
				<ITEM NAME="ISMULTIVALUE" FIELD="CHECK" />
				<ITEM NAME="SEPARATOR" VALUE="&quot;,&quot;" />
				<ITEM NAME="BINARY" FIELD="CHECK" />
				<ITEM NAME="BASE64" FIELD="CHECK" />
			</ITEMS>
		</PARAMETER>

		<PARAMETER NAME="MULTIVALUECOLUMNS" FIELD="TABLE" REQUIRED="false"	NUM_ROW="45" NB_LINES="3" SHOW_IF="(CHANGETYPE=='ADD') or (CHANGETYPE=='NONE')">
			<ITEMS BASED_ON_SCHEMA="true">
				<ITEM NAME="ISMULTIVALUE" FIELD="CHECK" />
				<ITEM NAME="SEPARATOR" VALUE="&quot;,&quot;" />
				<ITEM NAME="BINARY" FIELD="CHECK" />
				<ITEM NAME="BASE64" FIELD="CHECK" />
			</ITEMS>
		</PARAMETER>

		<PARAMETER NAME="SCHEMA" FIELD="SCHEMA_TYPE" REQUIRED="true" NUM_ROW="50">
			<TABLE>
				<COLUMN KEY="true" LENGTH="255" NAME="dn" TYPE="id_String" NULLABLE="false" READONLY="true" />
			</TABLE>
			<TABLE IF="CHANGETYPE=='MODRDN'">
				<COLUMN KEY="true" LENGTH="255" NAME="dn" TYPE="id_String" NULLABLE="false" READONLY="true" />
				<COLUMN KEY="false" LENGTH="255" NAME="newrdn" TYPE="id_String" NULLABLE="false" READONLY="true" />
				<COLUMN KEY="false" LENGTH="1" NAME="deleteoldrdn" TYPE="id_String" NULLABLE="false"  READONLY="true" />
				<COLUMN KEY="false" LENGTH="255" NAME="newsuperior" TYPE="id_String" NULLABLE="false" READONLY="false" />
			</TABLE>
			<TABLE IF="CHANGETYPE=='DELETE'">
				<COLUMN KEY="true" LENGTH="255" NAME="dn" TYPE="id_String" NULLABLE="false" READONLY="true" />
			</TABLE>
		</PARAMETER>

		<PARAMETER NAME="APPEND" FIELD="CHECK" REQUIRED="true"
			NUM_ROW="60">
			<DEFAULT>false</DEFAULT>
		</PARAMETER>
	</PARAMETERS>

	<ADVANCED_PARAMETERS>
		<PARAMETER NAME="VALIDATE_DISTINGUISHED_NAME" FIELD="CHECK" REQUIRED="true"
			NUM_ROW="30">
			<DEFAULT>false</DEFAULT>
		</PARAMETER>
		<PARAMETER NAME="CREATE" FIELD="CHECK" REQUIRED="true"
			NUM_ROW="45">
			<DEFAULT>true</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="FLUSHONROW" FIELD="CHECK" REQUIRED="true"
			NUM_ROW="48">
			<DEFAULT>false</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="FLUSHONROW_NUM" FIELD="TEXT" REQUIRED="true"
			NUM_ROW="48" SHOW_IF="FLUSHONROW == 'true'">
			<DEFAULT>1</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="ENCODING" FIELD="ENCODING_TYPE" NUM_ROW="60"
			REQUIRED="true">
			<DEFAULT>"ISO-8859-15"</DEFAULT>
		</PARAMETER>

	  	<PARAMETER NAME="DELETE_EMPTYFILE" FIELD="CHECK" REQUIRED="true" NUM_ROW="70">
	      <DEFAULT>false</DEFAULT>
	    </PARAMETER>
	</ADVANCED_PARAMETERS>

	<CODEGENERATION>
		<IMPORTS>
			<IMPORT NAME="commons-codec-1.14" MODULE="commons-codec-1.14.jar" MVN="mvn:commons-codec/commons-codec/1.14" REQUIRED="true" />
			<IMPORT NAME="LDIFFILE" MODULE="ldapjdk.jar" MVN="mvn:org.talend.libraries/ldapjdk/6.0.0"  UrlPath="platform:/plugin/org.talend.libraries.mozilla/lib/ldapjdk.jar" REQUIRED="true" />
		</IMPORTS>
	</CODEGENERATION>

	<RETURNS>
		<RETURN NAME="NB_LINE" TYPE="id_Integer" AVAILABILITY="AFTER" />
	</RETURNS>

</COMPONENT>
