<COMPONENT>
	<HEADER PLATEFORM="ALL" SERIAL="" VERSION="0.102" STATUS="ALPHA"
		COMPATIBILITY="ALL" AUTHOR="Talend" RELEASE_DATE="20070326A" LOG4J_ENABLED="true"
		STARTABLE="false" DATA_AUTO_PROPAGATE="false" HAS_CONDITIONAL_OUTPUTS="true" PARALLELIZE="true" PARTITIONING="AUTO">
		<SIGNATURE />
	</HEADER>

  <FAMILIES>
    <FAMILY>Databases/Vertica</FAMILY>
  </FAMILIES>

	<DOCUMENTATION>
		<URL />
	</DOCUMENTATION>

	<CONNECTORS>
		<CONNECTOR CTYPE="FLOW" MAX_INPUT="1" MAX_OUTPUT="1"/>
		<CONNECTOR NAME="REJECT" CTYPE="FLOW" MAX_INPUT="0" LINE_STYLE="2" COLOR="FF0000" BASE_SCHEMA="FLOW"
				NOT_SHOW_IF="((((DATA_ACTION == 'INSERT') AND (BATCH_MODE == 'true')) OR ((DATA_ACTION == 'UPDATE') AND (BATCH_MODE == 'true'))
    							OR ((DATA_ACTION == 'DELETE') AND (BATCH_MODE == 'true')))
    							OR (DIE_ON_ERROR == 'true'))"/>
		<CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="0" MAX_INPUT="0" />
		<CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" />
		<CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1" />
		<CONNECTOR CTYPE="COMPONENT_OK" />
		<CONNECTOR CTYPE="COMPONENT_ERROR" />
		<CONNECTOR CTYPE="RUN_IF" />
	</CONNECTORS>

	<PARAMETERS>
		<PARAMETER NAME="PROPERTY" FIELD="PROPERTY_TYPE" SHOW="true"
			NUM_ROW="1" REPOSITORY_VALUE="DATABASE:VERTICA"
			SHOW_IF="USE_EXISTING_CONNECTION == 'false'"/>

	<PARAMETER
		NAME="DB_VERSION"
		FIELD="CLOSED_LIST"
		NUM_ROW="10"
		REPOSITORY_VALUE="DB_VERSION"
		SHOW_IF="USE_EXISTING_CONNECTION == 'false'">
		<ITEMS DEFAULT="VERTICA_3">
			<ITEM NAME="VERTICA_3" VALUE="vertica_3.0_jdk_5.jar" />
			<ITEM NAME="VERTICA_3.5" VALUE="vertica_3.5_jdk_5.jar" />
			<ITEM NAME="VERTICA_4" VALUE="vertica_4.0_jdk_5.jar" />
			<ITEM NAME="VERTICA_4.1" VALUE="vertica_4.1.7_jdk_5.jar" />
			<ITEM NAME="VERTICA_5.0" VALUE="vertica_4.1.14_jdk_5.jar" />
            <ITEM NAME="VERTICA_5_1" VALUE="VERTICA_5_1" />
			<ITEM NAME="VERTICA_6_0" VALUE="VERTICA_6_0" />
			<ITEM NAME="VERTICA_6_1_X" VALUE="VERTICA_6_1_X" />
			<ITEM NAME="VERTICA_7_0_X" VALUE="VERTICA_7_0_X" />
			<ITEM NAME="VERTICA_7_1_X" VALUE="VERTICA_7_1_X" />
		</ITEMS>
	</PARAMETER>

    <PARAMETER NAME="USE_EXISTING_CONNECTION" FIELD="CHECK" NUM_ROW="20">
      <DEFAULT>false</DEFAULT>
    </PARAMETER>

    <PARAMETER NAME="CONNECTION" FIELD="COMPONENT_LIST" REQUIRED="true" FILTER="tVerticaConnection"
      NUM_ROW="20" SHOW_IF="USE_EXISTING_CONNECTION == 'true'" DYNAMIC_SETTINGS="true"
    />

    <PARAMETER
      NAME="TYPE"
      FIELD="TEXT"
      NUM_ROW="40"
      SHOW="false"
      REPOSITORY_VALUE="TYPE"
    >
      <DEFAULT>VERTICA</DEFAULT>
    </PARAMETER>
    
		<PARAMETER NAME="HOST" FIELD="TEXT" NUM_ROW="30" REQUIRED="true"
			REPOSITORY_VALUE="SERVER_NAME" SHOW_IF="USE_EXISTING_CONNECTION == 'false'">
			<DEFAULT>""</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="PORT" FIELD="TEXT" NUM_ROW="30" REQUIRED="true"
			REPOSITORY_VALUE="PORT" SHOW_IF="USE_EXISTING_CONNECTION == 'false'">
			<DEFAULT>"5433"</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="DBNAME" FIELD="TEXT" NUM_ROW="40"
			REPOSITORY_VALUE="SID" REQUIRED="true" SHOW_IF="USE_EXISTING_CONNECTION == 'false'">
			<DEFAULT>""</DEFAULT>
		</PARAMETER>
		<PARAMETER NAME="SCHEMA_DB" FIELD="TEXT" NUM_ROW="40"
			REPOSITORY_VALUE="SCHEMA" SHOW_IF="USE_EXISTING_CONNECTION == 'false'">
			<DEFAULT>""</DEFAULT>
		</PARAMETER>
		<PARAMETER NAME="USER" FIELD="TEXT" NUM_ROW="50"
			REPOSITORY_VALUE="USERNAME" REQUIRED="true" SHOW_IF="USE_EXISTING_CONNECTION == 'false'">
			<DEFAULT>""</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="PASS" FIELD="PASSWORD" NUM_ROW="50"
			REPOSITORY_VALUE="PASSWORD" REQUIRED="true" SHOW_IF="USE_EXISTING_CONNECTION == 'false'">
			<DEFAULT>""</DEFAULT>
		</PARAMETER>
		
		<PARAMETER NAME="TABLE" FIELD="DBTABLE" NUM_ROW="60"
			REQUIRED="true">
			<DEFAULT>""</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="TABLE_ACTION" FIELD="CLOSED_LIST"
			NUM_ROW="70" NOT_SHOW_IF="PARALLELIZE == 'true'">
			<ITEMS DEFAULT="NONE">
				<ITEM NAME="NONE" VALUE="NONE" />
				<ITEM NAME="DROP_CREATE" VALUE="DROP_CREATE" />
				<ITEM NAME="CREATE" VALUE="CREATE" />
				<ITEM NAME="CREATE_IF_NOT_EXISTS"
					VALUE="CREATE_IF_NOT_EXISTS" />
				<ITEM NAME="DROP_IF_EXISTS_AND_CREATE" VALUE="DROP_IF_EXISTS_AND_CREATE" />
				<ITEM NAME="CLEAR" VALUE="CLEAR" />
			</ITEMS>
		</PARAMETER>

		<PARAMETER NAME="USE_CASCADE" FIELD="CHECK" NUM_ROW="70" NOT_SHOW_IF="(PARALLELIZE == 'true') OR ((TABLE_ACTION != 'DROP_CREATE') AND (TABLE_ACTION != 'DROP_IF_EXISTS_AND_CREATE'))">
			<DEFAULT>true</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="DATA_ACTION" FIELD="CLOSED_LIST" NUM_ROW="70">
			<ITEMS DEFAULT="INSERT">
				<ITEM NAME="INSERT" VALUE="INSERT" />
				<ITEM NAME="UPDATE" VALUE="UPDATE" />
				<ITEM NAME="INSERT_OR_UPDATE" VALUE="INSERT_OR_UPDATE" />
				<ITEM NAME="UPDATE_OR_INSERT" VALUE="UPDATE_OR_INSERT" />
				<ITEM NAME="DELETE" VALUE="DELETE" />

				<ITEM NAME="COPY" VALUE="COPY" />

			</ITEMS>
		</PARAMETER>

		<PARAMETER NAME="SCHEMA_FLOW" FIELD="SCHEMA_TYPE" NUM_ROW="80">
			<DEFAULT>""</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="SCHEMA_REJECT" FIELD="SCHEMA_TYPE"
			REQUIRED="true" NUM_ROW="90" CONTEXT="REJECT" SHOW="true">
			<TABLE READONLY="true">
				<COLUMN NAME="errorCode" TYPE="id_String" LENGTH="255"
					READONLY="false" CUSTOM="true" />
				<COLUMN NAME="errorMessage" TYPE="id_String"
					LENGTH="255" READONLY="false" CUSTOM="true" />
			</TABLE>
		</PARAMETER>

		<PARAMETER NAME="DIE_ON_ERROR" FIELD="CHECK" NUM_ROW="100">
			<DEFAULT>true</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="MAPPING" FIELD="MAPPING_TYPE" NUM_ROW="100"
			SHOW="false">
			<DEFAULT>vertica_id</DEFAULT>
		</PARAMETER>
	</PARAMETERS>

	<ADVANCED_PARAMETERS>
		<PARAMETER
			NAME="PROPERTIES"
			FIELD="TEXT"
			NUM_ROW="1"
			REPOSITORY_VALUE="PROPERTIES_STRING"
			SHOW_IF="USE_EXISTING_CONNECTION == 'false'">
			<DEFAULT>""</DEFAULT>
		</PARAMETER>	

		<!-- COPY Command -->
		<PARAMETER NAME="ABORT_ON_ERROR" FIELD="CHECK" NUM_ROW="4" REQUIRED="false" GROUP="COPY_PARAMETERS" SHOW_IF="DATA_ACTION == 'COPY'">
			<DEFAULT>false</DEFAULT>
		</PARAMETER>
		<PARAMETER NAME="REJECT_MAX" FIELD="TEXT" NUM_ROW="4" REQUIRED="false" GROUP="COPY_PARAMETERS" SHOW_IF="DATA_ACTION == 'COPY'" />

		<PARAMETER NAME="EXCEPTIONS_PATH" FIELD="FILE" NUM_ROW="5" REQUIRED="false" GROUP="COPY_PARAMETERS" SHOW_IF="DATA_ACTION == 'COPY'" />

		<PARAMETER NAME="EXCEPTIONS_NODE" FIELD="TEXT" NUM_ROW="5" REQUIRED="false" GROUP="COPY_PARAMETERS" SHOW_IF="DATA_ACTION == 'COPY'" />

		<PARAMETER NAME="REJECTED_DATA" FIELD="FILE" NUM_ROW="6" REQUIRED="false" GROUP="COPY_PARAMETERS" SHOW_IF="DATA_ACTION == 'COPY'" />

		<PARAMETER NAME="REJECTED_NODE" FIELD="TEXT" NUM_ROW="6" REQUIRED="false" GROUP="COPY_PARAMETERS" SHOW_IF="DATA_ACTION == 'COPY'" />

		<PARAMETER NAME="NO_COMMIT" FIELD="CHECK" NUM_ROW="4" REQUIRED="false" GROUP="COPY_PARAMETERS" SHOW_IF="DATA_ACTION == 'COPY'">
			<DEFAULT>true</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="ENCODING" FIELD="TEXT" NUM_ROW="7"
			REQUIRED="true" SHOW="false">
			<DEFAULT>"ISO-8859-15"</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="COMMIT_EVERY" FIELD="TEXT" NUM_ROW="7"
			REQUIRED="true"  SHOW_IF="USE_EXISTING_CONNECTION == 'false' and ((DB_VERSION != 'VERTICA_7_1_X' and DB_VERSION != 'VERTICA_7_0_X' and DB_VERSION != 'VERTICA_6_1_X' and DB_VERSION != 'VERTICA_6_0' and DB_VERSION != 'VERTICA_5_1') or DATA_ACTION != 'COPY')">
			<DEFAULT>100</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="BATCH_MODE" FIELD="CHECK" NUM_ROW="10"
			REQUIRED="true" SHOW_IF="(DATA_ACTION == 'INSERT') OR (DATA_ACTION == 'UPDATE') OR (DATA_ACTION == 'DELETE') OR (DATA_ACTION == 'COPY')">
			<DEFAULT>false</DEFAULT>
		</PARAMETER>

	  <PARAMETER
    	NAME="NOTE"
    	FIELD="LABEL"
    	NUM_ROW="10"
    	SHOW_IF="(DATA_ACTION == 'INSERT') OR (DATA_ACTION == 'UPDATE') OR (DATA_ACTION == 'DELETE')"
      >
    	<DEFAULT>(Not compatible with reject links)</DEFAULT>
      </PARAMETER>

		<PARAMETER NAME="BATCH_SIZE" FIELD="TEXT" NUM_ROW="10"
			SHOW_IF="((DATA_ACTION == 'INSERT') OR (DATA_ACTION == 'UPDATE') OR (DATA_ACTION == 'DELETE')  OR (DATA_ACTION == 'COPY')) AND (BATCH_MODE=='true')">
			<DEFAULT>100</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="ADD_COLS" FIELD="TABLE" REQUIRED="false"
			NUM_ROW="11" NB_LINES="3">
			<ITEMS>
				<ITEM NAME="NAME" VALUE='"colname"' />
				<ITEM NAME="DATATYPE" VALUE="VARCHAR(50)" RAW="true"
					NOT_SHOW_IF="(TABLE_ACTION=='NONE') or (TABLE_ACTION=='CLEAR')" />
				<ITEM NAME="SQL" VALUE='"now()"' />
				<ITEM NAME="POS" FIELD="CLOSED_LIST">
					<ITEMS DEFAULT="BEFORE">
						<ITEM NAME="BEFORE" VALUE="BEFORE" />
						<ITEM NAME="AFTER" VALUE="AFTER" />
						<ITEM NAME="REPLACE" VALUE="REPLACE" />
					</ITEMS>
				</ITEM>
				<ITEM NAME="REFCOL" FIELD="COLUMN_LIST" />
			</ITEMS>
		</PARAMETER>

	    <PARAMETER
	      NAME="USE_FIELD_OPTIONS"
	      FIELD="CHECK"
	      NUM_ROW="12"
	    >
	      <DEFAULT>false</DEFAULT>
	    </PARAMETER>

	    <PARAMETER
	      NAME="FIELD_OPTIONS"
	      FIELD="TABLE"
	      REQUIRED="true"
	      NUM_ROW="13"
	      NB_LINES="5"
	      SHOW_IF="USE_FIELD_OPTIONS == 'true'"
	    >
	      <ITEMS BASED_ON_SCHEMA="true">
	        <ITEM NAME="UPDATE_KEY" VALUE="false" FIELD="CHECK" />
	        <ITEM NAME="DELETE_KEY" VALUE="false" FIELD="CHECK" />
	        <ITEM NAME="UPDATABLE"  VALUE="true"  FIELD="CHECK" />
	        <ITEM NAME="INSERTABLE" VALUE="true"  FIELD="CHECK" />
	      </ITEMS>
	    </PARAMETER>

	  	<PARAMETER
	  	  NAME="ENABLE_DEBUG_MODE"
	  	  FIELD="CHECK"
		  NUM_ROW="15">
		  <DEFAULT>false</DEFAULT>
		</PARAMETER>

		<PARAMETER
		NAME="SUPPORT_NULL_WHERE"
		FIELD="CHECK"
		NUM_ROW="20">
		  <DEFAULT>false</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="CREATE_PROJECTION" FIELD="CHECK" NUM_ROW="25" NOT_SHOW_IF="(PARALLELIZE == 'true') OR (TABLE_ACTION == 'NONE') OR (TABLE_ACTION == 'CLEAR')">
			<DEFAULT>true</DEFAULT>
		</PARAMETER>
	</ADVANCED_PARAMETERS>

   <CODEGENERATION>
       <IMPORTS>
		<IMPORT NAME="Driver-VERTICA" MODULE="vertica_3.0_jdk_5.jar" MVN="mvn:org.talend.libraries/vertica_3.0_jdk_5/6.0.0"   REQUIRED="false" />
		<IMPORT NAME="Driver-VERTICA_3.5" MODULE="vertica_3.5_jdk_5.jar" MVN="mvn:org.talend.libraries/vertica_3.5_jdk_5/6.0.0"   REQUIRED="false" />
		<IMPORT NAME="Driver-VERTICA_4" MODULE="vertica_4.0_jdk_5.jar" MVN="mvn:org.talend.libraries/vertica_4.0_jdk_5/6.0.0"   REQUIRED="false" />
		<IMPORT NAME="Driver-VERTICA_4.1" MODULE="vertica_4.1.7_jdk_5.jar" MVN="mvn:org.talend.libraries/vertica_4.1.7_jdk_5/6.0.0"   REQUIRED="false" />
		<IMPORT NAME="Driver-VERTICA_5.0" MODULE="vertica_4.1.14_jdk_5.jar" MVN="mvn:org.talend.libraries/vertica_4.1.14_jdk_5/6.0.0"   REQUIRED="false" />
        <IMPORT NAME="Driver-VERTICA_5.1" MODULE="vertica_5.1.6_jdk_5.jar" MVN="mvn:org.talend.libraries/vertica_5.1.6_jdk_5/6.0.0"   REQUIRED_IF="(USE_EXISTING_CONNECTION == 'false') and (DB_VERSION=='VERTICA_5_1')" />
		<IMPORT NAME="Driver-VERTICA_6.0" MODULE="vertica-jdk5-6.0.2-0.jar" MVN="mvn:org.talend.libraries/vertica-jdk5-6.0.2-0/6.0.0"   REQUIRED_IF="(USE_EXISTING_CONNECTION == 'false') and (DB_VERSION=='VERTICA_6_0')" />
		<IMPORT NAME="Driver-VERTICA_6.1.2" MODULE="vertica-jdk5-6.1.2-0.jar" MVN="mvn:org.talend.libraries/vertica-jdk5-6.1.2-0/6.0.0"   REQUIRED_IF="(USE_EXISTING_CONNECTION == 'false') and (DB_VERSION=='VERTICA_6_1_X')" />
		<IMPORT NAME="Driver-VERTICA_7.0.1" MODULE="vertica-jdbc-7.0.1-0.jar" MVN="mvn:org.talend.libraries/vertica-jdbc-7.0.1-0/6.0.0"   REQUIRED_IF="(USE_EXISTING_CONNECTION == 'false') and (DB_VERSION=='VERTICA_7_0_X')" />
		<IMPORT NAME="Driver-VERTICA_7.1.2" MODULE="vertica-jdbc-7.1.2-0.jar" MVN="mvn:org.talend.libraries/vertica-jdbc-7.1.2-0/6.0.0"   REQUIRED_IF="(USE_EXISTING_CONNECTION == 'false') and (DB_VERSION=='VERTICA_7_1_X')" />
    </IMPORTS>
  </CODEGENERATION>

	<RETURNS>
		<RETURN NAME="NB_LINE" TYPE="id_Integer" AVAILABILITY="AFTER" />
		<RETURN NAME="NB_LINE_UPDATED"  TYPE="id_Integer" AVAILABILITY="AFTER" />
		<RETURN NAME="NB_LINE_INSERTED" TYPE="id_Integer" AVAILABILITY="AFTER" />
		<RETURN NAME="NB_LINE_DELETED"  TYPE="id_Integer" AVAILABILITY="AFTER" />
		<RETURN NAME="NB_LINE_REJECTED" TYPE="id_Integer" AVAILABILITY="AFTER" />
		<RETURN NAME="NB_LINE_COPIED"  TYPE="id_Integer" AVAILABILITY="AFTER" />
		<RETURN NAME="QUERY" TYPE="id_String" AVAILABILITY="FLOW" SHOW_IF="ENABLE_DEBUG_MODE=='true'"/>
	</RETURNS>
</COMPONENT>
