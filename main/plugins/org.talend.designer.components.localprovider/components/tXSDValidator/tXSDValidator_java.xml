<COMPONENT>
  <HEADER
    PLATEFORM="ALL"
    SERIAL=""
    VERSION="0.101"
    STATUS="ALPHA"
    COMPATIBILITY="ALL"
    AUTHOR="Talend"
    RELEASE_DATE="20050320A"
    STARTABLE="true"
    SCHEMA_AUTO_PROPAGATE="false"
    DATA_AUTO_PROPAGATE="false"
    HAS_CONDITIONAL_OUTPUTS="true"
	PARTITIONING="AUTO"
  >
    <SIGNATURE></SIGNATURE>
  </HEADER>

  <FAMILIES>
    <FAMILY>XML</FAMILY>
  </FAMILIES>

  <DOCUMENTATION>
    <URL/>
  </DOCUMENTATION>

  <CONNECTORS>
    <CONNECTOR CTYPE="FLOW" MAX_INPUT="1" MAX_OUTPUT="1"/>
    <CONNECTOR NAME="REJECT" CTYPE="FLOW" MAX_INPUT="0" MAX_OUTPUT="1" LINE_STYLE="2" COLOR="FF0000" BASE_SCHEMA="FLOW" SHOW_IF="MODE=='FLOW_MODE'"/>
    <CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="0" MAX_INPUT="1"/>
    <CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" />
    <CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1" />
    <CONNECTOR CTYPE="COMPONENT_OK"/>
    <CONNECTOR CTYPE="COMPONENT_ERROR"/>
    <CONNECTOR CTYPE="RUN_IF"/>
  </CONNECTORS>
  
  
<PARAMETERS>
	<PARAMETER 
		NAME="MODE" 
		FIELD="CLOSED_LIST" 
		NUM_ROW="1">
		<ITEMS DEFAULT="FILE_MODE">
			<ITEM NAME="FILE_MODE" VALUE="FILE_MODE" />
			<ITEM NAME="FLOW_MODE" VALUE="FLOW_MODE" />
		</ITEMS>
	</PARAMETER>
    <PARAMETER
      NAME="SCHEMA"
      FIELD="SCHEMA_TYPE"
      REQUIRED="true"
      NUM_ROW="2"
    >
      <TABLE IF="(MODE=='FILE_MODE')" READONLY='true'>
        <COLUMN NAME="xsdfile" TYPE="id_String" LENGTH="255" />
        <COLUMN NAME="xmlfile" TYPE="id_String" LENGTH="255"/>
        <COLUMN NAME="moment" TYPE="id_Date" PATTERN='"yyyy-MM-dd HH:mm:ss"'/>
        <COLUMN NAME="job" TYPE="id_String" LENGTH="50"/>
        <COLUMN NAME="component" TYPE="id_String" LENGTH="255"/>
        <COLUMN NAME="validate" TYPE="id_Integer" LENGTH="1"/>
        <COLUMN NAME="message" TYPE="id_String" LENGTH="255"/>
      </TABLE>
      <TABLE IF="(MODE=='FLOW_MODE')">
      </TABLE>
    </PARAMETER>
    <PARAMETER NAME="SCHEMA_REJECT" FIELD="SCHEMA_TYPE" REQUIRED="true" NUM_ROW="2" CONTEXT="REJECT" SHOW="true">
      <TABLE READONLY="true">
        <COLUMN NAME="errorMessage" TYPE="id_String" LENGTH="255" READONLY="false" CUSTOM="true" />
      </TABLE>
    </PARAMETER>
<!-- validate with flow -->
    
    <PARAMETER NAME="MANUALTABLE" FIELD="TABLE" NUM_ROW="5" NB_LINES="5" SHOW_IF="MODE == 'FLOW_MODE'" REQUIRED="true">
      <ITEMS>
      	<ITEM NAME="INPUT_COLUMN" FIELD="PREV_COLUMN_LIST" />
        <ITEM NAME="XSD_FILE" FIELD="TEXT" />
      </ITEMS>
    </PARAMETER>
<!-- validate with file -->

    <PARAMETER
       NAME="XSDFILE"
       FIELD="FILE"
       REQUIRED="true"
       NUM_ROW="10"
       SHOW_IF="MODE == 'FILE_MODE'"
    >
      <DEFAULT>"__COMP_DEFAULT_FILE_DIR__/need_test.xsd"</DEFAULT>
    </PARAMETER>

    <PARAMETER
       NAME="XMLFILE"
       FIELD="FILE"
       REQUIRED="true"
       NUM_ROW="20"
       SHOW_IF="MODE == 'FILE_MODE'"
    >
      <DEFAULT>"__COMP_DEFAULT_FILE_DIR__/reference.xml"</DEFAULT>
    </PARAMETER>

    <PARAMETER
       NAME="VALID_MESSAGE"
       FIELD="TEXT"
       REQUIRED="true"
       NUM_ROW="30"
       SHOW_IF="MODE == 'FILE_MODE'"
    >
      <DEFAULT>"[job " + jobName + "] File is Valid"</DEFAULT>
    </PARAMETER>

    <PARAMETER
       NAME="INVALID_MESSAGE"
       FIELD="TEXT"
       REQUIRED="true"
       NUM_ROW="40"
       SHOW_IF="MODE == 'FILE_MODE'"
    >
      <DEFAULT>"[job " + jobName + "] File is Invalid"</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="PRINT"
      FIELD="CHECK"
      REQUIRED="true"
      NUM_ROW="50"
      SHOW_IF="MODE == 'FILE_MODE'"
    >
      <DEFAULT>true</DEFAULT>
    </PARAMETER>

  </PARAMETERS>
  <ADVANCED_PARAMETERS>
   
   	<PARAMETER 
		NAME="ENCODING" 
		FIELD="TEXT" 
		NUM_ROW="3" 
		REQUIRED="true">
		<DEFAULT>"UTF-8"</DEFAULT>
	</PARAMETER>
  </ADVANCED_PARAMETERS>

  <CODEGENERATION/>

  <RETURNS>
    <RETURN NAME="DIFFERENCE" TYPE="id_String" AVAILABILITY="FLOW"/>
    <RETURN NAME="VALID" TYPE="id_Boolean" AVAILABILITY="FLOW" />
    <RETURN NAME="XSD_ERROR_MESSAGE" TYPE="id_String" AVAILABILITY="FLOW"/>
  </RETURNS>

</COMPONENT>