<COMPONENT>

  <HEADER
    PLATEFORM="ALL"
    SERIAL=""
    VERSION="0.102"
    STATUS="ALPHA"
    
    COMPATIBILITY="ALL"
    AUTHOR="Talend"
    RELEASE_DATE="20050320A"
    STARTABLE="true"
	  PARTITIONING="AUTO"
    LOG4J_ENABLED="true"
  >
    <SIGNATURE />
  </HEADER>

  <FAMILIES>
    <FAMILY>File/Management</FAMILY>
  </FAMILIES>

  <DOCUMENTATION>
    <URL />
  </DOCUMENTATION>

   <CONNECTORS>
    <CONNECTOR CTYPE="FLOW" MAX_INPUT="1" MAX_OUTPUT="1"/>
    <CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="0" MAX_INPUT="1"/>
    <CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" />
    <CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1" />
    <CONNECTOR CTYPE="COMPONENT_OK"/>
    <CONNECTOR CTYPE="COMPONENT_ERROR"/>
    <CONNECTOR CTYPE="RUN_IF"/>
  </CONNECTORS>

  <PARAMETERS>
    <PARAMETER
      NAME="FILENAME"
      FIELD="FILE"
      NUM_ROW="10"
      REQUIRED="true"
      REPOSITORY_VALUE="FILE_PATH"
      SHOW_IF="ENABLE_COPY_DIRECTORY=='false'"
      
      
      
    >
      <DEFAULT>"__COMP_DEFAULT_FILE_DIR__/in.csv"</DEFAULT>
    </PARAMETER>
    
    <PARAMETER
     NAME="ENABLE_COPY_DIRECTORY"
     FIELD="CHECK"
     NUM_ROW="20"
    >
     <DEFAULT>false</DEFAULT>
    </PARAMETER> 
    
     <PARAMETER
     NAME="SOURCE_DERECTORY"
     FIELD="DIRECTORY"
     NUM_ROW="30"
     REQUIRED="true"
     REPOSITORY_VALUE="DESTINATION_PATH"
     SHOW_IF="ENABLE_COPY_DIRECTORY=='true'"
    >
    <DEFAULT>"__COMP_DEFAULT_FILE_DIR__"</DEFAULT>
    </PARAMETER> 
    
    
     
   
    
    <PARAMETER
      NAME="DESTINATION"
      FIELD="DIRECTORY"
      NUM_ROW="40"
      REQUIRED="true"
      REPOSITORY_VALUE="DESTINATION_PATH"
    > 
    <DEFAULT>"__COMP_DEFAULT_FILE_DIR__"</DEFAULT>  
    </PARAMETER>
    
    <PARAMETER
      NAME="RENAME"
      FIELD="CHECK"
      REQUIRED="true"
      NUM_ROW="50"
      SHOW_IF="ENABLE_COPY_DIRECTORY=='false'"
    >
      <DEFAULT>false</DEFAULT>
    </PARAMETER>    
    
    <PARAMETER
      NAME="DESTINATION_RENAME"
      FIELD="TEXT"
      NUM_ROW="50"
      REQUIRED="true"
      SHOW_IF="(ENABLE_COPY_DIRECTORY=='false') AND (RENAME == 'true')"
    > 
    <DEFAULT>"NewName.temp"</DEFAULT>  
    </PARAMETER>
    
   <PARAMETER
      NAME="REMOVE_FILE"
      FIELD="CHECK"
      REQUIRED="true"
      NUM_ROW="60"
      REPOSITORY_VALUE="REMOVE_FILE"
      SHOW_IF="ENABLE_COPY_DIRECTORY=='false'"
    >
      <DEFAULT>false</DEFAULT>
    </PARAMETER>
    <PARAMETER
      NAME="REPLACE_FILE"
      FIELD="CHECK"
      REQUIRED="true"
      NUM_ROW="60"
      REPOSITORY_VALUE="REPLACE_FILE"
      SHOW_IF=" ENABLE_COPY_DIRECTORY=='false'"
    >
      <DEFAULT>true</DEFAULT>
    </PARAMETER>
    <PARAMETER
      NAME="CREATE_DIRECTORY"
      FIELD="CHECK"
      REQUIRED="true"
      NUM_ROW="60"
      REPOSITORY_VALUE="CREATE_DIRECTORY"
      SHOW_IF="ENABLE_COPY_DIRECTORY=='false'"
    >
      <DEFAULT>true</DEFAULT>
    </PARAMETER>
    <PARAMETER 
     NAME="FAILON"
     FIELD="CHECK"
     NUM_ROW="70"
    >
    <DEFAULT>false</DEFAULT>
    </PARAMETER>
  </PARAMETERS>
  
  <ADVANCED_PARAMETERS>
	<PARAMETER
      NAME="FORCE_COPY_DELETE"
      FIELD="CHECK"
      REQUIRED="true"
      NUM_ROW="10"
      REPOSITORY_VALUE="FORCE_COPY_DELETE"
      SHOW_IF="(REMOVE_FILE=='true') AND (ENABLE_COPY_DIRECTORY=='false')"
    >
      <DEFAULT>false</DEFAULT>
    </PARAMETER>
  </ADVANCED_PARAMETERS>
  
  <CODEGENERATION>
    <IMPORTS>
      <IMPORT NAME="filecopy-2.0.2" MODULE="filecopy-2.0.2.jar" 
              MVN="mvn:org.talend.components/filecopy/2.0.2"
              UrlPath="platform:/plugin/org.talend.libraries.custom/lib/filecopy-2.0.2.jar"
              REQUIRED="true" />
    </IMPORTS>
  </CODEGENERATION>
  
  <RETURNS>
  		<RETURN NAME="DESTINATION_FILENAME" TYPE="id_String" AVAILABILITY="AFTER" />
		  <RETURN NAME="DESTINATION_FILEPATH" TYPE="id_String" AVAILABILITY="AFTER" />
		  <RETURN NAME="SOURCE_DIRECTORY" TYPE="id_String" AVAILABILITY="AFTER" />
		  <RETURN NAME="DESTINATION_DIRECTORY" TYPE="id_String" AVAILABILITY="AFTER" />
		
  </RETURNS>
  
</COMPONENT>
