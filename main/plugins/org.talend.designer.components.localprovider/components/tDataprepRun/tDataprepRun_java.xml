<COMPONENT>
	<HEADER
		PLATEFORM="ALL"
		SERIAL=""
		VERSION="0.102"
		STATUS="ALPHA"
		COMPATIBILITY="ALL"
		AUTHOR="Talend"
		RELEASE_DATE="20150920A"
		
		STARTABLE="false"
		SCHEMA_AUTO_PROPAGATE="false"
		DATA_AUTO_PROPAGATE="false"
		SUPPORTS_DB_TYPE="true"
		EXTENSION="org.talend.designer.dataprep">
		<SIGNATURE />
	</HEADER>

    <FAMILIES>
     	<FAMILY>Talend Data Preparation</FAMILY>
    </FAMILIES>

	<DOCUMENTATION>
		<URL />
	</DOCUMENTATION>

	<CONNECTORS>
    	<CONNECTOR CTYPE="FLOW" MIN_INPUT="1" MAX_INPUT="1" MAX_OUTPUT="1" />
    	<!-- TODO allow iterate input? -->
    	<CONNECTOR CTYPE="ITERATE" MAX_INPUT="0" MAX_OUTPUT="1" />
    	
    	<CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="0" MAX_OUTPUT="0" />
    	<CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="0" MAX_OUTPUT="0" />
   		<CONNECTOR CTYPE="COMPONENT_OK" MAX_INPUT="0" />
    	<CONNECTOR CTYPE="COMPONENT_ERROR" MAX_INPUT="0" />
    	<CONNECTOR CTYPE="RUN_IF" MAX_INPUT="0" />
	</CONNECTORS>

	<PARAMETERS>
		<PARAMETER NAME="URL" FIELD="TEXT" REQUIRED="true" NUM_ROW="10" GROUP="DATAPREP_CONNECTION">
			<DEFAULT>"http://localhost"</DEFAULT>
		</PARAMETER>
		
		<PARAMETER NAME="USERNAME" FIELD="TEXT" REQUIRED="true" NUM_ROW="20" GROUP="DATAPREP_CONNECTION">
			<DEFAULT>""</DEFAULT>
		</PARAMETER>
		
		<PARAMETER NAME="PASSWORD" FIELD="PASSWORD" REQUIRED="true" NUM_ROW="20" GROUP="DATAPREP_CONNECTION">
			<DEFAULT>""</DEFAULT>
		</PARAMETER>
		
		<PARAMETER NAME="PREPARATION_ID" FIELD="DATA_PREP_ID" REQUIRED="true" NUM_ROW="40" GROUP="PREPARATION_CONFIGURATION">
			<DEFAULT>""</DEFAULT>
		</PARAMETER>
		
		<PARAMETER NAME="FETCH_SCHEMA" FIELD="FETCH_SCHEMA"  NUM_ROW="50" GROUP="PREPARATION_CONFIGURATION" />
		
		<PARAMETER NAME="SCHEMA" FIELD="SCHEMA_TYPE" REQUIRED="true" GROUP="PREPARATION_CONFIGURATION"
			NUM_ROW="50">
			<DEFAULT />
		</PARAMETER>
		
		<PARAMETER NAME="MAP" FIELD="EXTERNAL" GROUP="PREPARATION_CONFIGURATION"
			NUM_ROW="50"/>
	</PARAMETERS>


	<ADVANCED_PARAMETERS>
		<PARAMETER NAME="LIMIT_PREVIEW" FIELD="TEXT" REQUIRED="false" NUM_ROW="10" >
			<DEFAULT>1000</DEFAULT>
		</PARAMETER>
	</ADVANCED_PARAMETERS>
		

	<CODEGENERATION>
		<TEMPLATES INPUT="DataprepOut" OUTPUT="DataprepIn">

			<TEMPLATE NAME="DataprepOut" COMPONENT="tDataprepOut">
				<LINK_TO NAME="DataprepIn" CTYPE="ROWS_END" />
			</TEMPLATE>

			<TEMPLATE NAME="DataprepIn" COMPONENT="tDataprepIn" />

			<TEMPLATE_PARAM SOURCE="self.URL" TARGET="DataprepOut.URL" />
			<TEMPLATE_PARAM SOURCE="self.PREPARATION_ID" TARGET="DataprepOut.PREPARATION_ID" />
			<TEMPLATE_PARAM SOURCE="self.SCHEMA" TARGET="DataprepOut.SCHEMA" />
			<TEMPLATE_PARAM SOURCE="self.SCHEMA" TARGET="DataprepIn.SCHEMA" />
			
			<TEMPLATE_PARAM SOURCE="self.UNIQUE_NAME" TARGET="DataprepOut.UNAME"/>
      		<TEMPLATE_PARAM SOURCE="self.UNIQUE_NAME" TARGET="DataprepIn.UNAME" />

		</TEMPLATES>
	</CODEGENERATION>
	
	<RETURNS/>
</COMPONENT>
