<COMPONENT>
   
     <HEADER
    PLATEFORM="ALL"
    SERIAL=""
    VERSION="0.102"
    STATUS="ALPHA"
    
    COMPATIBILITY="ALL"
    AUTHOR="Talend"
    RELEASE_DATE="20100112A"
    STARTABLE="true"
     EXTENSION="org.talend.designer.dbmap" 
     SCHEMA_AUTO_PROPAGATE="false" 
     DATA_AUTO_PROPAGATE="false" 
  >
    <SIGNATURE/>
  </HEADER>

  <FAMILIES>
    <FAMILY>ELT/Map/DB_JDBC</FAMILY>
  </FAMILIES>

  <DOCUMENTATION>
    <URL/>
  </DOCUMENTATION>

  <CONNECTORS>
<!--		<CONNECTOR CTYPE="FLOW" BUILTIN="true" MIN_OUTPUT="1" MAX_INPUT="0"/> -->
	    <CONNECTOR CTYPE="TABLE" BUILTIN="true" MIN_INPUT="1" MIN_OUTPUT="1"/>
	    <CONNECTOR CTYPE="TABLE_REF" BUILTIN="true" MIN_INPUT="1" MIN_OUTPUT="1" MAX_OUTPUT="1" />
	    
		<CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="0" MAX_INPUT="0"/>
		<CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" />
		<CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1" />
		<CONNECTOR CTYPE="COMPONENT_OK"/>
		<CONNECTOR CTYPE="COMPONENT_ERROR"/>
		<CONNECTOR CTYPE="RUN_IF"/>
  </CONNECTORS>

  <PARAMETERS>

	   <PARAMETER
	     NAME="USE_EXISTING_CONNECTION"
	     FIELD="CHECK"
	     NUM_ROW="2"
	     SHOW_IF="#LINK@CONNECTOR.OUT.TABLE_REF == '0'"
	   >
	     <DEFAULT>false</DEFAULT>
	   </PARAMETER>    
	   
	   <PARAMETER
	     NAME="CONNECTION"
	     FIELD="COMPONENT_LIST"
	     REQUIRED="true" FILTER="REGEXP:^tJDBCConnection|tSnowflakeConnection|tSAPHanaConnection$"
	     NUM_ROW="2"
	     SHOW_IF="(#LINK@CONNECTOR.OUT.TABLE_REF == '0') AND (USE_EXISTING_CONNECTION == 'true')"
	     DYNAMIC_SETTINGS="true"/>

      <PARAMETER 
      	NAME="MAP" 
      	FIELD="EXTERNAL"
      	NUM_ROW="10">
         <DEFAULT/>  
      </PARAMETER>

      <PARAMETER
        NAME="LINK_STYLE"
        FIELD="CLOSED_LIST"
        NUM_ROW="10"
        SHOW_IF="#LINK@CONNECTOR.OUT.TABLE_REF == '0'"
      >
        <ITEMS DEFAULT="">
          <ITEM NAME="AUTO"   VALUE="AUTO" />
          <ITEM NAME="BEZIER_CURVE"   VALUE="BEZIER_CURVE" />
          <ITEM NAME="LINE"   VALUE="LINE" />
        </ITEMS>
      </PARAMETER>

    <PARAMETER
      NAME="PROPERTY"
      FIELD="PROPERTY_TYPE"
      SHOW="true"
      NUM_ROW="20"
      REPOSITORY_VALUE="DATABASE:JDBC"
      SHOW_IF="(#LINK@CONNECTOR.OUT.TABLE_REF == '0') AND (USE_EXISTING_CONNECTION == 'false')"
    />
    
 	<PARAMETER
      NAME="URL"
      FIELD="TEXT"
      NUM_ROW="30"
      REPOSITORY_VALUE="URL"
      REQUIRED="true"
      SHOW_IF="(#LINK@CONNECTOR.OUT.TABLE_REF == '0') AND (USE_EXISTING_CONNECTION == 'false')"
    >
      <DEFAULT>"jdbc:"</DEFAULT>
    </PARAMETER>
	
    <PARAMETER
      NAME="DRIVER_JAR"
      FIELD="TABLE"
      NUM_ROW="40"
      NB_LINES="2"
      REPOSITORY_VALUE="DRIVER_JAR"
      REQUIRED="true"
      SHOW_IF="(#LINK@CONNECTOR.OUT.TABLE_REF == '0') AND (USE_EXISTING_CONNECTION == 'false')"
    >
      	<ITEMS> 
			<ITEM NAME="JAR_NAME" FIELD="MODULE_LIST"  /> 
		</ITEMS> 
    </PARAMETER>
	
    <PARAMETER
      NAME="DRIVER_CLASS"
      FIELD="TEXT"
      NUM_ROW="50"
      REPOSITORY_VALUE="DRIVER_CLASS"
      REQUIRED="true"
      SHOW_IF="(#LINK@CONNECTOR.OUT.TABLE_REF == '0') AND (USE_EXISTING_CONNECTION == 'false')"
    >
      <DEFAULT>""</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="USER"
      FIELD="TEXT"
      NUM_ROW="60"
      REPOSITORY_VALUE="USERNAME"
      REQUIRED="true"
      SHOW_IF="(#LINK@CONNECTOR.OUT.TABLE_REF == '0') AND (USE_EXISTING_CONNECTION == 'false')"
    >
      <DEFAULT>""</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="PASS"
      FIELD="PASSWORD"
      NUM_ROW="60"
      REPOSITORY_VALUE="PASSWORD"
      REQUIRED="true"
      SHOW_IF="(#LINK@CONNECTOR.OUT.TABLE_REF == '0') AND (USE_EXISTING_CONNECTION == 'false')"
    >
      <DEFAULT>""</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="ENCODING"
      FIELD="ENCODING_TYPE"
      NUM_ROW="70"
      REQUIRED="true"
      SHOW="false"
    >
      <DEFAULT>"ISO-8859-15"</DEFAULT>
    </PARAMETER>
 
    <PARAMETER NAME="PREVIEW" FIELD="IMAGE" SHOW="true" NUM_ROW="80">
       <DEFAULT/>
    </PARAMETER>
      
    <PARAMETER
      NAME="MAPPING"
      FIELD="MAPPING_TYPE"
      NUM_ROW="99"
      REPOSITORY_VALUE="MAPPING"
    >
      <DEFAULT>mysql_id</DEFAULT>
    </PARAMETER>

   </PARAMETERS>
    
  <ADVANCED_PARAMETERS>
  		<PARAMETER NAME="PROPERTIES" FIELD="TEXT" NUM_ROW="10" REPOSITORY_VALUE="PROPERTIES_STRING" SHOW_IF="(#LINK@CONNECTOR.OUT.TABLE_REF == '0') AND (USE_EXISTING_CONNECTION == 'false')">
			<DEFAULT>""</DEFAULT>
		</PARAMETER>
  </ADVANCED_PARAMETERS>
  
   <CODEGENERATION>
   </CODEGENERATION>

   <RETURNS>
   </RETURNS>
   
   <PLUGINDEPENDENCIES>
   	<PLUGINDEPENDENCY ID="org.talend.designer.abstractmap" />
<!--   	<PLUGINDEPENDENCY ID="org.talend.designer.dbmap" />  --> 
   </PLUGINDEPENDENCIES>
</COMPONENT>
