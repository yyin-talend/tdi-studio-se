<COMPONENT>
  <HEADER
    PLATEFORM="ALL"
    SERIAL=""
    VERSION="0.101"
    STATUS="ALPHA"

    COMPATIBILITY="ALL"
    AUTHOR="Talend"
    RELEASE_DATE="20050320A"
    STARTABLE="true"
    LOG4J_ENABLED="true"
  >
    <SIGNATURE></SIGNATURE>
  </HEADER>

  <FAMILIES>
    <FAMILY>Internet</FAMILY>
  </FAMILIES>

  <DOCUMENTATION>
    <URL/>
  </DOCUMENTATION>

  <CONNECTORS>
    <CONNECTOR CTYPE="FLOW" MAX_INPUT="0" MAX_OUTPUT="0"/>
    <CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="1" MAX_INPUT="1"/>
    <CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" />
    <CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1" />
    <CONNECTOR CTYPE="COMPONENT_OK"/>
    <CONNECTOR CTYPE="COMPONENT_ERROR"/>
    <CONNECTOR CTYPE="RUN_IF"/>
  </CONNECTORS>

  <PARAMETERS>

    <PARAMETER
      NAME="HOST"
      FIELD="TEXT"
      REQUIRED="true"
      NUM_ROW="1"
    >
      <DEFAULT>"127.0.0.1"</DEFAULT>
    </PARAMETER>

    <PARAMETER
     NAME="PORT"
     FIELD="TEXT"
     REQUIRED="true"
     NUM_ROW="1"
    >
     <DEFAULT>110</DEFAULT>
    </PARAMETER>
    
     <PARAMETER
      NAME="AUTH_MODE"
      FIELD="CLOSED_LIST"
      NUM_ROW="5"
      GROUP="AUTHENTICATION"
    >
      <ITEMS DEFAULT="BASIC">
        <ITEM NAME="BASIC"   VALUE="BASIC" />
        <ITEM NAME="OAUTH2" VALUE="OAUTH2" />
      </ITEMS>
    </PARAMETER>

    <PARAMETER
      NAME="USERNAME"
      FIELD="TEXT"
      REQUIRED="true"
      NUM_ROW="6"
      GROUP="AUTHENTICATION"
    >
      <DEFAULT>"username"</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="PASSWORD"
      FIELD="PASSWORD"
      REQUIRED="true"
      NUM_ROW="6"
      GROUP="AUTHENTICATION"
      SHOW_IF="AUTH_MODE == 'BASIC'"
    >
      <DEFAULT>"password"</DEFAULT>
    </PARAMETER>
    
     <PARAMETER
      NAME="TOKEN"
      FIELD="PASSWORD"
      REQUIRED="true"
      NUM_ROW="6"
      GROUP="AUTHENTICATION"
      SHOW_IF="AUTH_MODE == 'OAUTH2'"
    >
      <DEFAULT>"password"</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="OUTPUT_DIRECTORY"
      FIELD="DIRECTORY"
      NUM_ROW="10"
    >
      <DEFAULT>"__COMP_DEFAULT_FILE_DIR__"</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="FILENAME_PATTERN"
      FIELD="TEXT"
      REQUIRED="true"
      NUM_ROW="15"
    >
      <DEFAULT>TalendDate.getDate("yyyyMMdd-hhmmss") + "_" + java.util.UUID.randomUUID().toString().substring(0, 16) + ".mail"</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="ALL_EMAILS"
      FIELD="CHECK"
      REQUIRED="true"
      NUM_ROW="20"
    >
      <DEFAULT>true</DEFAULT>
    </PARAMETER>
    
    <PARAMETER
      NAME="NEWER_EMAILS"
      FIELD="CHECK"
      REQUIRED="true"
      NUM_ROW="25"
      SHOW_IF="ALL_EMAILS == 'false'"
    >
      <DEFAULT>true</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="MAX_EMAILS"
      FIELD="TEXT"
      REQUIRED="true"
      NUM_ROW="20"
      SHOW_IF="ALL_EMAILS == 'false'"
    >
      <DEFAULT>10</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="DELETE_FROM_SERVER"
      FIELD="CHECK"
      REQUIRED="true"
      NUM_ROW="25"
    >
      <DEFAULT>false</DEFAULT>
    </PARAMETER>

    <PARAMETER NAME="PROTOCOL" FIELD="CLOSED_LIST" NUM_ROW="30">
      <ITEMS DEFAULT="POP3">
        <ITEM NAME="POP3" VALUE="pop3" />
        <ITEM NAME="IMAP" VALUE="imap"/>
      </ITEMS>
    </PARAMETER>

    <PARAMETER NAME="SPECIFY_MAIL_FOLDER" FIELD="CHECK" REQUIRED="true" NUM_ROW="30" SHOW_IF="PROTOCOL == 'IMAP'">
      <DEFAULT>false</DEFAULT>
    </PARAMETER>

    <PARAMETER NAME="MAIL_FOLDER" FIELD="TEXT" REQUIRED="true" NUM_ROW="30" SHOW_IF="(SPECIFY_MAIL_FOLDER == 'true') AND (PROTOCOL == 'IMAP')">
     <DEFAULT>"INBOX"</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="USE_SSL"
      FIELD="CHECK"
      REQUIRED="true"
      NUM_ROW="35"
    >
      <DEFAULT>false</DEFAULT>
    </PARAMETER>

  </PARAMETERS>

  <ADVANCED_PARAMETERS>
  	<PARAMETER NAME="ADVANCED_FILTER" FIELD="TABLE" REQUIRED="false"
		NUM_ROW="10" NB_LINES="5" SHOW="true">
	  <ITEMS>
		<ITEM NAME="FILTER_TIEM" FIELD="CLOSED_LIST" >
			<ITEMS DEFAULT="FROM">
        		<ITEM NAME="FROM" VALUE="From" />
        		<ITEM NAME="TO" VALUE="To"/>
        		<ITEM NAME="SUBJECT" VALUE="Subject"/>
        		<ITEM NAME="BEFORE_DATE" VALUE="BeforeDate"/>
        		<ITEM NAME="AFTER_DATE" VALUE="AfterDate"/>
      		</ITEMS>
		</ITEM>
		<ITEM NAME="PATTERN" FIELD="TEXT" />
	  </ITEMS>
	</PARAMETER>

	<PARAMETER NAME="FILTER_RELATION" FIELD="CLOSED_LIST" NUM_ROW="20">
      <ITEMS DEFAULT="AND">
        <ITEM NAME="AND" VALUE="&amp;&amp;" />
        <ITEM NAME="OR" VALUE="||"/>
      </ITEMS>
    </PARAMETER>
    
    <PARAMETER
      NAME="USE_TWO_LINE_TOKEN"
      FIELD="CHECK"
      REQUIRED="true"
      SHOW_IF="AUTH_MODE == 'OAUTH2'"
      NUM_ROW="14">
        <DEFAULT>false</DEFAULT>
    </PARAMETER>

    	 <PARAMETER NAME="CONFIGS" FIELD="TABLE" REQUIRED="false" NUM_ROW="15" NB_LINES="3">
          <ITEMS>
            <ITEM NAME="KEY" />
            <ITEM NAME="VALUE" />
          </ITEMS>
        </PARAMETER>
        
  </ADVANCED_PARAMETERS>

  <CODEGENERATION>
    <IMPORTS>
      <IMPORT NAME="jakartaMail" MODULE="jakarta.mail-1.6.7.jar" MVN="mvn:com.sun.mail/jakarta.mail/1.6.7" REQUIRED="true" />
      <IMPORT NAME="JAF" MODULE="activation.jar" MVN="mvn:org.talend.libraries/activation/6.0.0"  UrlPath="platform:/plugin/org.talend.libraries.apache.axis2/lib/activation.jar" REQUIRED="true" />
    </IMPORTS>
  </CODEGENERATION>

  <RETURNS>
    <RETURN NAME="NB_EMAIL" TYPE="id_Integer" AVAILABILITY="AFTER"/>
    <RETURN NAME="CURRENT_FILE" TYPE="id_String" AVAILABILITY="FLOW"/>
    <RETURN NAME="CURRENT_FILEPATH" TYPE="id_String" AVAILABILITY="FLOW"/>
  </RETURNS>
</COMPONENT>
