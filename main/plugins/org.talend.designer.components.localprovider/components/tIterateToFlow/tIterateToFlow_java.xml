<COMPONENT>
  <HEADER
    PLATEFORM="ALL"
    SERIAL=""
    VERSION="0.101"
    STATUS="ALPHA"
    COMPATIBILITY="ALL"
    AUTHOR="Talend"
    RELEASE_DATE="20050320A"
    STARTABLE="false"
    SCHEMA_AUTO_PROPAGATE="true"
    DATA_AUTO_PROPAGATE="true"
    VISIBLE="true"
  >
    <SIGNATURE></SIGNATURE>
  </HEADER>

  <FAMILIES>
    <FAMILY>Orchestration</FAMILY>
  </FAMILIES>

  <DOCUMENTATION>
    <URL/>
  </DOCUMENTATION>

  <CONNECTORS>
    <CONNECTOR CTYPE="FLOW" MAX_INPUT="0" MAX_OUTPUT="1"/>
    <CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="0" MAX_INPUT="1"/>
    <CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" />
    <CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1" />
    <CONNECTOR CTYPE="COMPONENT_OK"/>
    <CONNECTOR CTYPE="COMPONENT_ERROR"/>
    <CONNECTOR CTYPE="RUN_IF"/>
  </CONNECTORS>

  <PARAMETERS>

    <PARAMETER
      NAME="SCHEMA"
      FIELD="SCHEMA_TYPE"
      REQUIRED="true"
      NUM_ROW="10"
    >
      <DEFAULT/> 
    </PARAMETER>

    <PARAMETER
      NAME="MAPPING"
      FIELD="TABLE"
      REQUIRED="true"
      NUM_ROW="30"
      NB_LINES="5"
    >
      <ITEMS BASED_ON_SCHEMA="true">
        <ITEM
          NAME="VALUE"
          FIELD="TEXT"
        />
      </ITEMS>
    </PARAMETER>

  </PARAMETERS>

  <CODEGENERATION>
    <TEMPLATES INPUT="ITFO" OUTPUT="AI">

      <TEMPLATE NAME="ITFO" COMPONENT="tIterateToFlowOut">
        <LINK_TO NAME="AI" CTYPE="SUBJOB_OK"/>
      </TEMPLATE>
      
      <TEMPLATE NAME="AI" COMPONENT="tArrayIn"/>
      
      <TEMPLATE_PARAM SOURCE="self.SCHEMA" TARGET="ITFO.SCHEMA"/>
      <TEMPLATE_PARAM SOURCE="self.SCHEMA" TARGET="AI.SCHEMA"/>

      <TEMPLATE_PARAM SOURCE="self.MAPPING" TARGET="ITFO.MAPPING"/>

      <TEMPLATE_PARAM SOURCE="self.UNIQUE_NAME" TARGET="IFTO.DESTINATION"/>
      <TEMPLATE_PARAM SOURCE="self.UNIQUE_NAME" TARGET="AI.ORIGIN" />
    </TEMPLATES>
  </CODEGENERATION>

  <RETURNS/>
</COMPONENT>
