<!-- $Id: tUniqRow_java.xml 2045 2007-02-13 11:24:17Z rbillerey $ -->
<COMPONENT>
  <HEADER
    PLATEFORM="ALL"
    SERIAL=""
    VERSION="0.101"
    STATUS="ALPHA"
    
    COMPATIBILITY="ALL"
    AUTHOR="Talend"
    RELEASE_DATE="20050320A"
    STARTABLE="false"
    SCHEMA_AUTO_PROPAGATE="true"
    DATA_AUTO_PROPAGATE="false"
    HAS_CONDITIONAL_OUTPUTS="true"
    PARTITIONING="UNIQUE_KEY"
    LOG4J_ENABLED="true"
  >
    <SIGNATURE />
  </HEADER>

  <FAMILIES>
    <FAMILY>Data_Quality</FAMILY>
  </FAMILIES>

  <DOCUMENTATION>
    <URL/>
  </DOCUMENTATION>

  <CONNECTORS>
	<CONNECTOR CTYPE="FLOW" MAX_OUTPUT="0" MAX_INPUT="1"/>
    <CONNECTOR
      NAME="UNIQUE"
      CTYPE="FLOW"
      MAX_OUTPUT="1"
      COLOR="086438"
      BASE_SCHEMA="FLOW"
    />
    <CONNECTOR
      NAME="DUPLICATE"
      CTYPE="FLOW"
      MAX_OUTPUT="1"
      LINE_STYLE="2"
      COLOR="f36300"
      BASE_SCHEMA="FLOW"
    />
    <CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="1" MAX_INPUT="0"/>
    <CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" />
    <CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1" />
    <CONNECTOR CTYPE="COMPONENT_OK"/>
    <CONNECTOR CTYPE="COMPONENT_ERROR"/>
    <CONNECTOR CTYPE="RUN_IF"/>
  </CONNECTORS>

  <PARAMETERS>
    <PARAMETER NAME="SCHEMA" FIELD="SCHEMA_TYPE" REQUIRED="true" NUM_ROW="1"/>
    <PARAMETER NAME="SCHEMA_UNIQUE" FIELD="SCHEMA_TYPE" NUM_ROW="1" CONTEXT="UNIQUE"/>
    <PARAMETER NAME="SCHEMA_DUPLICATE" FIELD="SCHEMA_TYPE" NUM_ROW="1" CONTEXT="DUPLICATE"/>

    <PARAMETER
      NAME="UNIQUE_KEY"
      FIELD="TABLE"
      REQUIRED="true"
      NUM_ROW="2"
      NB_LINES="5"
    >
      <ITEMS BASED_ON_SCHEMA="true">
		<ITEM NAME="KEY_ATTRIBUTE" FIELD="CHECK" VALUE="false"/>
		<ITEM NAME="CASE_SENSITIVE" FIELD="CHECK" VALUE="false"/>
      </ITEMS>
    </PARAMETER>
  </PARAMETERS>
  
  <ADVANCED_PARAMETERS>
  
    <PARAMETER
      NAME="ONLY_ONCE_EACH_DUPLICATED_KEY"
      FIELD="CHECK"
      NUM_ROW="6"
    >
      <DEFAULT>false</DEFAULT>
    </PARAMETER>
    
	<PARAMETER
      NAME="IS_VIRTUAL_COMPONENT"
      FIELD="CHECK"
      NUM_ROW="7"
      REQUIRED="true"
    >
      <DEFAULT>false</DEFAULT>
    </PARAMETER>

	<PARAMETER
      NAME="BUFFER_SIZE"
      FIELD="OPENED_LIST"
      RAW="true"
      NUM_ROW="8"
      REQUIRED="true"
      SHOW_IF="IS_VIRTUAL_COMPONENT == 'true'"
    >
      <ITEMS DEFAULT="M">
        <ITEM NAME="SMALL" VALUE="S" />
        <ITEM NAME="MEDIUM" VALUE="M"/>
        <ITEM NAME="BIG" VALUE="B"/>
      </ITEMS>
    </PARAMETER>
    
	<PARAMETER
      NAME="TEMP_DIRECTORY"
      FIELD="DIRECTORY"
      NUM_ROW="9"
      SHOW_IF="IS_VIRTUAL_COMPONENT == 'true'"
    >
      <DEFAULT/>
    </PARAMETER>
    
    <PARAMETER
      NAME="CHANGE_HASH_AND_EQUALS_FOR_BIGDECIMAL"
      FIELD="CHECK"
      NUM_ROW="10"
    >
      <DEFAULT>false</DEFAULT>
    </PARAMETER>
    
  </ADVANCED_PARAMETERS>
  
    <CODEGENERATION>
		<TEMPLATES INPUT="UniqOut" OUTPUT="UniqIn">

			<TEMPLATE NAME="UniqOut" COMPONENT="tUniqRowOut">
				<LINK_TO NAME="UniqIn" CTYPE="ROWS_END" />
			</TEMPLATE>

			<TEMPLATE NAME="UniqIn" COMPONENT="tUniqRowIn" />
			
			<TEMPLATE_PARAM SOURCE="self.SCHEMA" TARGET="UniqOut.SCHEMA"/>
			<TEMPLATE_PARAM SOURCE="self.SCHEMA" TARGET="UniqIn.SCHEMA"/>
			
			<TEMPLATE_PARAM SOURCE="self.UNIQUE_NAME" TARGET="UniqOut.CID"/>
			<TEMPLATE_PARAM SOURCE="self.UNIQUE_NAME" TARGET="UniqIn.CID"/>
			
			<TEMPLATE_PARAM SOURCE="self.UNIQUE_KEY" TARGET="UniqOut.UNIQUE_KEY"/>
			
			<TEMPLATE_PARAM SOURCE="self.TEMP_DIRECTORY" TARGET="UniqOut.TEMP_DIRECTORY"/>
			
			<TEMPLATE_PARAM SOURCE="self.BUFFER_SIZE" TARGET="UniqOut.BUFFER_SIZE"/>
			
			<TEMPLATE_PARAM SOURCE="self.ONLY_ONCE_EACH_DUPLICATED_KEY" TARGET="UniqIn.ONLY_ONCE_EACH_DUPLICATED_KEY"/>
			
			<TEMPLATE_PARAM SOURCE="self.CHANGE_HASH_AND_EQUALS_FOR_BIGDECIMAL" TARGET="UniqOut.IGNORE_TRAILING_ZEROS_FOR_BIGDECIMAL"/>
			
		</TEMPLATES>
	</CODEGENERATION>

  <RETURNS>
    <RETURN NAME="NB_UNIQUES" TYPE="id_Integer" AVAILABILITY="AFTER"/>
    <RETURN NAME="NB_DUPLICATES" TYPE="id_Integer" AVAILABILITY="AFTER"/>
  </RETURNS>  
</COMPONENT>
