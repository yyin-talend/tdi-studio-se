<COMPONENT>
  <HEADER
    PLATEFORM="ALL"
    SERIAL=""
    VERSION="0.102"
    STATUS="ALPHA"

    COMPATIBILITY="ALL"
    AUTHOR="Talend"
    RELEASE_DATE="20070316A"
    STARTABLE="false"
	PARTITIONING="NONE"
  >
    <SIGNATURE/>
  </HEADER>

  <FAMILIES>
    <FAMILY>Databases/Vertica</FAMILY>
  </FAMILIES>

  <DOCUMENTATION>
    <URL/>
  </DOCUMENTATION>

  <CONNECTORS>
    <CONNECTOR CTYPE="FLOW" MAX_INPUT="1" MAX_OUTPUT="0"/>
    <CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="1" MAX_INPUT="1"/>
    <CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" />
    <CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1" />
    <CONNECTOR CTYPE="COMPONENT_OK"/>
    <CONNECTOR CTYPE="COMPONENT_ERROR"/>
    <CONNECTOR CTYPE="RUN_IF"/>
  </CONNECTORS>

  <PARAMETERS>
    <PARAMETER
      NAME="PROPERTY"
      FIELD="PROPERTY_TYPE"
      SHOW="true"
      NUM_ROW="1"
      REPOSITORY_VALUE="DATABASE:VERTICA"
      SHOW_IF="USE_EXISTING_CONNECTION == 'false'"
    />

	<PARAMETER
		NAME="DB_VERSION"
		FIELD="CLOSED_LIST"
		NUM_ROW="10"
		REPOSITORY_VALUE="DB_VERSION"
		SHOW_IF="USE_EXISTING_CONNECTION == 'false'">
		<ITEMS DEFAULT="VERTICA_3">
			<ITEM NAME="VERTICA_3" VALUE="vertica_3.0_jdk_5.jar" />
			<ITEM NAME="VERTICA_3.5" VALUE="vertica_3.5_jdk_5.jar" />
			<ITEM NAME="VERTICA_4" VALUE="vertica_4.0_jdk_5.jar" />
			<ITEM NAME="VERTICA_4.1" VALUE="vertica_4.1.7_jdk_5.jar" />
			<ITEM NAME="VERTICA_5.0" VALUE="vertica_4.1.14_jdk_5.jar" />
            <ITEM NAME="VERTICA_5_1" VALUE="VERTICA_5_1" />
			<ITEM NAME="VERTICA_6_0" VALUE="VERTICA_6_0" />
			<ITEM NAME="VERTICA_6_1_X" VALUE="VERTICA_6_1_X" />
			<ITEM NAME="VERTICA_7_0_X" VALUE="VERTICA_7_0_X" />
		</ITEMS>
	</PARAMETER>

    <PARAMETER
      NAME="USE_EXISTING_CONNECTION"
      FIELD="CHECK"
      NUM_ROW="20"
    >
      <DEFAULT>false</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="CONNECTION"
      FIELD="COMPONENT_LIST"
      REQUIRED="true" FILTER="tVerticaConnection"
      NUM_ROW="20"
      SHOW_IF="USE_EXISTING_CONNECTION == 'true'"
    />

    <PARAMETER
      NAME="HOST"
      FIELD="TEXT"
      NUM_ROW="30"
      REQUIRED="true"
      REPOSITORY_VALUE="SERVER_NAME"
      SHOW_IF="USE_EXISTING_CONNECTION == 'false'"
    >
      <DEFAULT>""</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="PORT"
      FIELD="TEXT"
      NUM_ROW="30"
      REQUIRED="true"
      REPOSITORY_VALUE="PORT"
      SHOW_IF="USE_EXISTING_CONNECTION == 'false'"
    >
      <DEFAULT>"5433"</DEFAULT>
    </PARAMETER>
 
    <PARAMETER
      NAME="TYPE"
      FIELD="TEXT"
      NUM_ROW="40"
      SHOW="false"
      REPOSITORY_VALUE="TYPE"
    >
      <DEFAULT>VERTICA</DEFAULT>
    </PARAMETER>
    
    <PARAMETER
      NAME="DBNAME"
      FIELD="TEXT"
      NUM_ROW="40"
      REQUIRED="true"
      REPOSITORY_VALUE="SID"
      SHOW_IF="USE_EXISTING_CONNECTION == 'false'"
    >
      <DEFAULT>""</DEFAULT>
    </PARAMETER>

    	<PARAMETER
		NAME="SCHEMA_DB"
		FIELD="TEXT"
		NUM_ROW="40"
		REPOSITORY_VALUE="SCHEMA"
		SHOW_IF="USE_EXISTING_CONNECTION == 'false'">
		<DEFAULT>""</DEFAULT>
	</PARAMETER>

    <PARAMETER
      NAME="USER"
      FIELD="TEXT"
      NUM_ROW="50"
      REQUIRED="true"
      REPOSITORY_VALUE="USERNAME"
      SHOW_IF="USE_EXISTING_CONNECTION == 'false'"
    >
      <DEFAULT>""</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="PASS"
      FIELD="PASSWORD"
      NUM_ROW="50"
      REQUIRED="true"
      REPOSITORY_VALUE="PASSWORD"
      SHOW_IF="USE_EXISTING_CONNECTION == 'false'"
    >
      <DEFAULT>""</DEFAULT>
    </PARAMETER>
    
    <PARAMETER
      NAME="TABLE_ACTION"
      FIELD="CLOSED_LIST"
      NUM_ROW="60"
      NOT_SHOW_IF="PARALLELIZE == 'true'"
    >
      <ITEMS DEFAULT="NONE">
        <ITEM NAME="NONE" VALUE="NONE" />
        <ITEM NAME="DROP_CREATE" VALUE="DROP_CREATE"/>
        <ITEM NAME="CREATE" VALUE="CREATE"/>
        <ITEM NAME="CREATE_IF_NOT_EXISTS" VALUE="CREATE_IF_NOT_EXISTS"/>
        <ITEM NAME="DROP_IF_EXISTS_AND_CREATE" VALUE="DROP_IF_EXISTS_AND_CREATE" />
        <ITEM NAME="CLEAR" VALUE="CLEAR"/>
      </ITEMS>
    </PARAMETER>

    <PARAMETER
      NAME="TABLE"
      FIELD="DBTABLE"
      NUM_ROW="59"
    >
      <DEFAULT>"table name"</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="DATA_ACTION"
      FIELD="CLOSED_LIST"
      NUM_ROW="51"
    >
      <ITEMS DEFAULT="INSERT">
        <ITEM NAME="INSERT"           VALUE="INSERT"/>
        <ITEM NAME="UPDATE"           VALUE="UPDATE"/>
      </ITEMS>
    </PARAMETER>

    <PARAMETER
      NAME="SCHEMA"
      FIELD="SCHEMA_TYPE"
      NUM_ROW="60"
    >
      <DEFAULT>""</DEFAULT>
    </PARAMETER>
    
    <PARAMETER NAME="USE_SCHEMA_FOR_COPY" FIELD="CHECK" NUM_ROW="80">
        <DEFAULT>false</DEFAULT>
     </PARAMETER> 

    <PARAMETER
      NAME="FILENAME"
      FIELD="FILE"
      NUM_ROW="70"
      REQUIRED="true"
    >
      <DEFAULT>"__COMP_DEFAULT_FILE_DIR__/out.csv"</DEFAULT>
    </PARAMETER>

    <PARAMETER
    	NAME="APPEND"
        FIELD="CHECK"
        REQUIRED="true"
        NUM_ROW="70"
        REPOSITORY_VALUE="APPEND">
      <DEFAULT>false</DEFAULT>
    </PARAMETER>

	<PARAMETER
      NAME="MAPPING"
      FIELD="MAPPING_TYPE"
      NUM_ROW="90"
      SHOW="false"
      READONLY="true"
    >
      <DEFAULT>vertica_id</DEFAULT>
    </PARAMETER>

  </PARAMETERS>

  <ADVANCED_PARAMETERS>
	<PARAMETER
		NAME="PROPERTIES"
		FIELD="TEXT"
		NUM_ROW="1"
		REPOSITORY_VALUE="PROPERTIES_STRING"
		SHOW_IF="USE_EXISTING_CONNECTION == 'false'">
		<DEFAULT>""</DEFAULT>
	</PARAMETER>
	  
  	<PARAMETER
      NAME="ROS"
      FIELD="CHECK"
      NUM_ROW="5"
    >
      <DEFAULT>true</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="EXIT_ON_NO_ROWS"
      FIELD="CHECK"
      NUM_ROW="6"
    >
      <DEFAULT>true</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="FIELDSEPARATOR"
      FIELD="TEXT"
      NUM_ROW="7"
      MAX_LENGTH="1"
      REPOSITORY_VALUE="FIELD_SEPARATOR"
    >
      <DEFAULT>";"</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="NULL_STRING"
      FIELD="TEXT"
      NUM_ROW="7"
      REPOSITORY_VALUE="NULL_STRING"
    >
      <DEFAULT>"null"</DEFAULT>
    </PARAMETER>

   	<PARAMETER
   		NAME="INCLUDEHEADER"
   		FIELD="CHECK"
   		NUM_ROW="7">
      <DEFAULT>false</DEFAULT>
    </PARAMETER>

    <PARAMETER
    	NAME="ENCODING"
    	FIELD="ENCODING_TYPE"
    	NUM_ROW="8"
    	REQUIRED="true"
    	REPOSITORY_VALUE="ENCODING">
      <DEFAULT>"ISO-8859-15"</DEFAULT>
    </PARAMETER>
    
	<PARAMETER
	   NAME="REJECTED_DATA_FILE"
	   FIELD="FILE"
	   NUM_ROW="20"
	   REQUIRED="true"
	   SHOW_IF="DATA_ACTION=='INSERT'"
	 >
	   <DEFAULT>""</DEFAULT>
	 </PARAMETER>    
    
	<PARAMETER
	   NAME="EXCEPTION_FILE"
	   FIELD="FILE"
	   NUM_ROW="40"
	   REQUIRED="true"
	   SHOW_IF="DATA_ACTION=='INSERT'"
	 >
	   <DEFAULT>""</DEFAULT>
	 </PARAMETER> 
    
  </ADVANCED_PARAMETERS>

  <CODEGENERATION>
    <TEMPLATES INPUT="tVOB" OUTPUT="tVBE">

      <TEMPLATE NAME="tVOB" COMPONENT="tVerticaOutputBulk">
        <LINK_TO NAME="tVBE" CTYPE="ROWS_END"/>
      </TEMPLATE>

      <TEMPLATE NAME="tVBE" COMPONENT="tVerticaBulkExec"/>

      <TEMPLATE_PARAM SOURCE="self.FILENAME"   TARGET="tVOB.FILENAME" />
      <TEMPLATE_PARAM SOURCE="self.FIELDSEPARATOR"   TARGET="tVOB.FIELDSEPARATOR" />
      <TEMPLATE_PARAM SOURCE="self.APPEND"   TARGET="tVOB.APPEND" />
      <TEMPLATE_PARAM SOURCE="self.INCLUDEHEADER"   TARGET="tVOB.INCLUDEHEADER" />
      <TEMPLATE_PARAM SOURCE="self.ENCODING"   TARGET="tVOB.ENCODING" />
      <TEMPLATE_PARAM SOURCE="self.SCHEMA"   TARGET="tVOB.SCHEMA" />
	  <TEMPLATE_PARAM SOURCE="self.NULL_STRING"   TARGET="tVOB.NULL_STRING" />

      <TEMPLATE_PARAM SOURCE="self.USE_EXISTING_CONNECTION"   TARGET="tVBE.USE_EXISTING_CONNECTION" />
      <TEMPLATE_PARAM SOURCE="self.CONNECTION"   TARGET="tVBE.CONNECTION" />
      <TEMPLATE_PARAM SOURCE="self.DB_VERSION"   TARGET="tVBE.DB_VERSION" />
      <TEMPLATE_PARAM SOURCE="self.HOST"   TARGET="tVBE.HOST" />
      <TEMPLATE_PARAM SOURCE="self.PORT"   TARGET="tVBE.PORT" />
      <TEMPLATE_PARAM SOURCE="self.DBNAME"   TARGET="tVBE.DBNAME" />
      <TEMPLATE_PARAM SOURCE="self.SCHEMA_DB" TARGET="tOBE.SCHEMA_DB" />
      <TEMPLATE_PARAM SOURCE="self.USER"   TARGET="tVBE.USER" />
      <TEMPLATE_PARAM SOURCE="self.PASS"   TARGET="tVBE.PASS" />
      <TEMPLATE_PARAM SOURCE="self.PROPERTIES"   TARGET="tVBE.PROPERTIES" />
      <TEMPLATE_PARAM SOURCE="self.TABLE_ACTION"   TARGET="tVBE.TABLE_ACTION" />
      <TEMPLATE_PARAM SOURCE="self.DATA_ACTION"   TARGET="tVBE.DATA_ACTION" />
      <TEMPLATE_PARAM SOURCE="self.TABLE"   TARGET="tVBE.TABLE" />
      <TEMPLATE_PARAM SOURCE="self.EXIT_ON_NO_ROWS"   TARGET="tVBE.EXIT_ON_NO_ROWS" />
      <TEMPLATE_PARAM SOURCE="self.SCHEMA"   TARGET="tVBE.SCHEMA" />
      <TEMPLATE_PARAM SOURCE="self.USE_SCHEMA_FOR_COPY"   TARGET="tVBE.USE_SCHEMA_FOR_COPY" />
      <TEMPLATE_PARAM SOURCE="self.FILENAME"   TARGET="tVBE.REMOTE_FILENAME" />
      <TEMPLATE_PARAM SOURCE="self.FIELDSEPARATOR"   TARGET="tVBE.FIELDS_TERMINATED_BY" />
      <TEMPLATE_PARAM SOURCE="self.NULL_STRING"   TARGET="tVBE.NULL_STRING" />
      <TEMPLATE_PARAM SOURCE="self.MAPPING"   TARGET="tVBE.MAPPING" />
      <TEMPLATE_PARAM SOURCE="self.ROS"   TARGET="tVBE.ROS" />
      <TEMPLATE_PARAM SOURCE="self.TYPE"   TARGET="tVBE.TYPE" />
      <TEMPLATE_PARAM SOURCE="self.REJECTED_DATA_FILE"   TARGET="tVBE.REJECTED_DATA_FILE" />
      <TEMPLATE_PARAM SOURCE="self.EXCEPTION_FILE"   TARGET="tVBE.EXCEPTION_FILE" />
      <TEMPLATE_PARAM SOURCE="self.UNIQUE_NAME"   TARGET="tVBE.CID" />



    </TEMPLATES>
    <IMPORTS>
		<IMPORT NAME="Driver-VERTICA" MODULE="vertica_3.0_jdk_5.jar"  REQUIRED="false" />
		<IMPORT NAME="Driver-VERTICA_3.5" MODULE="vertica_3.5_jdk_5.jar"  REQUIRED="false" />
		<IMPORT NAME="Driver-VERTICA_4" MODULE="vertica_4.0_jdk_5.jar"  REQUIRED="false" />
		<IMPORT NAME="Driver-VERTICA_4.1" MODULE="vertica_4.1.7_jdk_5.jar"  REQUIRED="false" />
		<IMPORT NAME="Driver-VERTICA_5.0" MODULE="vertica_4.1.14_jdk_5.jar"  REQUIRED="false" />
        <IMPORT NAME="Driver-VERTICA_5.1" MODULE="vertica_5.1.6_jdk_5.jar"  REQUIRED_IF="(USE_EXISTING_CONNECTION == 'false') and (DB_VERSION=='VERTICA_5_1')" />
		<IMPORT NAME="Driver-VERTICA_6.0" MODULE="vertica-jdk5-6.0.2-0.jar"  REQUIRED_IF="(USE_EXISTING_CONNECTION == 'false') and (DB_VERSION=='VERTICA_6_0')" />
		<IMPORT NAME="Driver-VERTICA_6.1.2" MODULE="vertica-jdk5-6.1.2-0.jar"  REQUIRED_IF="(USE_EXISTING_CONNECTION == 'false') and (DB_VERSION=='VERTICA_6_1_X')" />
		<IMPORT NAME="Driver-VERTICA_7.0.1" MODULE="vertica-jdbc-7.0.1-0.jar"  REQUIRED_IF="(USE_EXISTING_CONNECTION == 'false') and (DB_VERSION=='VERTICA_7_0_X')" />
    </IMPORTS>
  </CODEGENERATION>

   <RETURNS>
   	<RETURN NAME="ACCEPTED_ROW_NUMBER" TYPE="id_Integer" AVAILABILITY="AFTER" />
	<RETURN NAME="REJECTED_ROW_NUMBER" TYPE="id_Integer" AVAILABILITY="AFTER" />
   </RETURNS>
   
</COMPONENT>
