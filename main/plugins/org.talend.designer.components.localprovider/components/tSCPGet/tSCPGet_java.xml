<COMPONENT>

  <HEADER
    PLATEFORM="ALL"
    SERIAL=""
    VERSION="0.102"
    STATUS="ALPHA"
    
    COMPATIBILITY="ALL"
    AUTHOR="Talend"
    RELEASE_DATE="20050320A"
    STARTABLE="true"
    PARTITIONING="AUTO"
    LOG4J_ENABLED="true"
  >
    <SIGNATURE />
  </HEADER>

  <FAMILIES>
    <FAMILY>Internet/SCP</FAMILY>
  </FAMILIES>

  <DOCUMENTATION>
    <URL />
  </DOCUMENTATION>

   <CONNECTORS>
    <CONNECTOR CTYPE="FLOW" MAX_INPUT="1" MAX_OUTPUT="1"/>
    <CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="0" MAX_INPUT="1"/>
    <CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" />
    <CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1" />
    <CONNECTOR CTYPE="COMPONENT_OK"/>
    <CONNECTOR CTYPE="COMPONENT_ERROR"/>
    <CONNECTOR CTYPE="RUN_IF"/>
  </CONNECTORS>

  <PARAMETERS>

    <PARAMETER
      NAME="USE_EXISTING_CONNECTION"
      FIELD="CHECK"
      NUM_ROW="1"
      >
      <DEFAULT>false</DEFAULT>
    </PARAMETER>   
    
    <PARAMETER
      NAME="CONNECTION"
      FIELD="COMPONENT_LIST"
      REQUIRED="true" FILTER="tSCPConnection"
      NUM_ROW="1"
      SHOW_IF="USE_EXISTING_CONNECTION == 'true'"
    />    

    <PARAMETER
      NAME="HOST"
      FIELD="TEXT"
      NUM_ROW="10"
      SHOW_IF="USE_EXISTING_CONNECTION == 'false'"
    >
      <DEFAULT>"127.0.0.1"</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="PORT"
      FIELD="TEXT"
      NUM_ROW="20"
      SHOW_IF="USE_EXISTING_CONNECTION == 'false'"
    >
      <DEFAULT>22</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="USERNAME"
      FIELD="TEXT"
      NUM_ROW="30"
      SHOW_IF="USE_EXISTING_CONNECTION == 'false'"
    >
      <DEFAULT>"username"</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="AUTH_METHOD"
      FIELD="CLOSED_LIST"
      NUM_ROW="40"
      SHOW_IF="USE_EXISTING_CONNECTION == 'false'"
    >
      <ITEMS DEFAULT="PASSWORD">
        <ITEM NAME="PUBLICKEY"  VALUE="PUBLICKEY"/>
        <ITEM NAME="PASSWORD"   VALUE="PASSWORD"/>
        <ITEM NAME="KEYBOARDINTERACTIVE"   VALUE="KEYBOARDINTERACTIVE"/>
      </ITEMS>
    </PARAMETER>

    <PARAMETER
      NAME="PASSWORD"
      FIELD="PASSWORD"
      NUM_ROW="50"
      SHOW_IF="(USE_EXISTING_CONNECTION == 'false') and ((AUTH_METHOD == 'PASSWORD') or (AUTH_METHOD == 'KEYBOARDINTERACTIVE'))"
    >
      <DEFAULT>"password"</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="PRIVATEKEY"
      FIELD="FILE"
      NUM_ROW="70"
      SHOW_IF="(USE_EXISTING_CONNECTION == 'false') and AUTH_METHOD == 'PUBLICKEY'"
    >
      <DEFAULT>"/.ssh/id_dsa"</DEFAULT>
    </PARAMETER>

	<PARAMETER
      NAME="PASSPHRASE"
      FIELD="PASSWORD"
      NUM_ROW="50"
      SHOW_IF="(USE_EXISTING_CONNECTION == 'false') and AUTH_METHOD == 'PUBLICKEY'"
    >
      <DEFAULT>"secret"</DEFAULT>
    </PARAMETER>
    
    <PARAMETER NAME="LOCALDIR" FIELD="DIRECTORY" REQUIRED="false" NUM_ROW="80">
      <DEFAULT>"__COMP_DEFAULT_FILE_DIR__"</DEFAULT>
    </PARAMETER>
    
    <PARAMETER 
    	NAME="REPLACEOPTION" 
    	FIELD="CLOSED_LIST" 
    	NUM_ROW="90" 
    	SHOW="true">
    	<ITEMS DEFAULT="overwrite">
     	<ITEM NAME="OVERWRITE" VALUE="overwrite"/>
        <ITEM NAME="APPEND"  VALUE="append"/>
        <ITEM NAME="NOREPLACE"  VALUE="none"/>
      </ITEMS>
    </PARAMETER>  

    <PARAMETER
      NAME="FILELIST"
      FIELD="TABLE"
      REQUIRED="true"
      NUM_ROW="100"
    >
      <ITEMS>
     	<ITEM NAME="SOURCE" />
      </ITEMS>
    </PARAMETER>     

  </PARAMETERS>

  <ADVANCED_PARAMETERS>
    <PARAMETER
      NAME="FORCE_UNIX_PATH"
      FIELD="CHECK"
      NUM_ROW="1"
      >
      <DEFAULT>false</DEFAULT>
    </PARAMETER>
  </ADVANCED_PARAMETERS>

  <CODEGENERATION>
    <IMPORTS>
      <IMPORT NAME="SSHD_CORE" MODULE="sshd-core-2.5.1.jar" MVN="mvn:org.apache.sshd/sshd-core/2.5.1" REQUIRED="true"/>
      <IMPORT NAME="SSHD_COMMON" MODULE="sshd-common-2.5.1.jar" MVN="mvn:org.apache.sshd/sshd-common/2.5.1" REQUIRED="true"/>
      <IMPORT NAME="SSHD_SCP" MODULE="sshd-scp-2.5.1.jar" MVN="mvn:org.apache.sshd/sshd-scp/2.5.1" REQUIRED="true"/>
      <IMPORT NAME="talend-scp-helper" MODULE="talend-scp-helper-1.0.jar" MVN="mvn:org.talend.components/talend-scp-helper/1.0" REQUIRED="true"/>
    </IMPORTS>
  </CODEGENERATION>

	<RETURNS>
		<RETURN NAME="NB_FILE" TYPE="id_Integer" AVAILABILITY="AFTER"/>
		<RETURN NAME="STATUS" TYPE="id_String" AVAILABILITY="AFTER"/>
	</RETURNS>
</COMPONENT>
